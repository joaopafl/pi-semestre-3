<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Casa Espírita Trabalhadores de Jesus</title>
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32'%3E%3Cdefs%3E%3ClinearGradient id='heartGradient' x1='0%25' y1='0%25' x2='100%25' y2='100%25'%3E%3Cstop offset='0%25' style='stop-color:%234A90E2;stop-opacity:1' /%3E%3Cstop offset='50%25' style='stop-color:%2366BB6A;stop-opacity:1' /%3E%3Cstop offset='100%25' style='stop-color:%23FFD700;stop-opacity:1' /%3E%3C/linearGradient%3E%3C/defs%3E%3Cpath d='M16,28 C14,26 4,18 4,12 C4,8 8,4 12,4 C14,4 15,5 16,6 C17,5 18,4 20,4 C24,4 28,8 28,12 C28,18 18,26 16,28 Z' fill='url(%23heartGradient)' stroke='%23FFD700' stroke-width='0.5'/%3E%3Cellipse cx='10' cy='9' rx='2' ry='2' fill='rgba(255,255,255,0.4)' /%3E%3Cellipse cx='22' cy='9' rx='2' ry='2' fill='rgba(255,255,255,0.4)' /%3E%3C/svg%3E">

    <!-- Bootstrap CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome para ícones -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- CSS local (se existir) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Pi_Odonto.styles.css" asp-append-version="true" />

    <style>
        :root {
            --cor-primaria: #4A90E2;
            --cor-secundaria: #66BB6A;
            --cor-accent: #FFD700;
            --cor-paz: #E3F2FD;
            --cor-esperanca: #E8F5E8;
            --cor-texto: #2C3E50;
            --cor-texto-suave: #5D6D7E;
            --cor-amor: #FF6B8A;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: #fafbfc;
        }

        /* Navbar Estilizada */
        .navbar-custom {
            background: linear-gradient(135deg, var(--cor-primaria), var(--cor-secundaria)) !important;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            padding: 1rem 0;
            border: none !important;
        }

        .navbar-brand-custom {
            color: white !important;
            font-weight: 600;
            font-size: 1.2rem;
            text-decoration: none;
            display: flex;
            align-items: center;
            line-height: 1.2;
        }

            .navbar-brand-custom:hover {
                color: var(--cor-accent) !important;
                transform: translateY(-1px);
                transition: all 0.3s ease;
            }

        .brand-icon {
            margin-right: 0.75rem;
            font-size: 1.3rem;
            background: linear-gradient(135deg, white, var(--cor-accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .brand-text {
            display: flex;
            flex-direction: column;
        }

        .brand-main {
            font-size: 1.2rem;
            font-weight: 600;
            line-height: 1;
        }

        .brand-sub {
            font-size: 0.8rem;
            font-weight: 400;
            opacity: 0.9;
            line-height: 1;
        }

        .nav-link-custom {
            color: white !important;
            font-weight: 500;
            transition: all 0.3s ease;
            margin: 0 0.3rem;
            border-radius: 20px;
            padding: 8px 16px !important;
            position: relative;
        }

            .nav-link-custom:hover {
                background-color: rgba(255,255,255,0.15);
                transform: translateY(-2px);
                color: var(--cor-accent) !important;
            }

            .nav-link-custom i {
                margin-right: 0.5rem;
                width: 16px;
                text-align: center;
            }

        .dropdown-menu-custom {
            border-radius: 15px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            padding: 0.5rem 0;
        }

        .dropdown-item-custom {
            padding: 0.75rem 1.5rem;
            color: var(--cor-texto);
            transition: all 0.3s ease;
        }

            .dropdown-item-custom:hover {
                background: linear-gradient(135deg, var(--cor-paz), var(--cor-esperanca));
                color: var(--cor-texto);
                transform: translateX(5px);
            }

            .dropdown-item-custom i {
                margin-right: 0.75rem;
                width: 16px;
                text-align: center;
                color: var(--cor-primaria);
            }

        .dropdown-divider-custom {
            margin: 0.5rem 1rem;
            border-top: 1px solid #e9ecef;
        }

        .navbar-toggler-custom {
            border: 2px solid rgba(255,255,255,0.3);
            border-radius: 10px;
            padding: 0.5rem;
        }

            .navbar-toggler-custom:focus {
                box-shadow: 0 0 15px rgba(255,255,255,0.3);
            }

        .navbar-toggler-icon-custom {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.8%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='m4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        /* Footer Estilizado */
        .footer-custom {
            background: linear-gradient(135deg, var(--cor-texto), #34495E);
            color: white;
            padding: 2rem 0 1rem;
            margin-top: 4rem;
            border: none;
        }

            .footer-custom a {
                color: var(--cor-accent);
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .footer-custom a:hover {
                    color: white;
                }

        .footer-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .footer-brand {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }

            .footer-brand i {
                margin-right: 0.5rem;
                color: var(--cor-accent);
            }

        .footer-links {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .main-content {
            min-height: calc(100vh - 200px);
            padding-bottom: 2rem;
            margin-top: 8mm;
        }

        /* Responsivo */
        @@media (max-width: 768px) {
            .navbar-brand-custom {
                font-size: 1rem;
            }

            .brand-main {
                font-size: 1rem;
            }

            .brand-sub {
                font-size: 0.7rem;
            }

            .footer-content {
                flex-direction: column;
                text-align: center;
                gap: 1rem;
            }

            .footer-links {
                justify-content: center;
            }
        }

        @@media (max-width: 576px) {
            .navbar-custom {
                padding: 0.75rem 0;
            }

            .nav-link-custom {
                margin: 0.25rem 0;
                text-align: left;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand-custom" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-heart brand-icon"></i>
                    <div class="brand-text">
                        <span class="brand-main">Casa Espírita</span>
                        <span class="brand-sub">Trabalhadores de Jesus</span>
                    </div>
                </a>

                <button class="navbar-toggler navbar-toggler-custom" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon navbar-toggler-icon-custom"></span>
                </button>

                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.HasClaim("TipoUsuario", "Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link nav-link-custom" href="/Admin/Dashboard">
                                        <i class="fas fa-tachometer-alt"></i> Painel Admin
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-custom" href="/Admin/Responsaveis">
                                        <i class="fas fa-users"></i> Famílias
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-custom" href="/Dentista">
                                        <i class="fas fa-user-md"></i> Dentistas
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-custom" href="/Atendimento">
                                        <i class="fas fa-calendar-check"></i> Atendimentos
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-custom" href="/Admin/Relatorios">
                                        <i class="fas fa-chart-bar"></i> Relatórios
                                    </a>
                                </li>
                            }

                            @if (User.HasClaim("TipoUsuario", "Responsavel"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link nav-link-custom" href="/Perfil">
                                        <i class="fas fa-heart"></i> Minha Família
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <!-- Menu público -->
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" href="/">
                                    <i class="fas fa-home"></i> Início
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" href="/Cadastro">
                                    <i class="fas fa-user-plus"></i> Cadastrar Família
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" href="/Dentista">
                                    <i class="fas fa-user-md"></i> Dentistas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" href="/Atendimento">
                                    <i class="fas fa-calendar-check"></i> Atendimentos
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle nav-link-custom" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-custom">
                                    @if (User.HasClaim("TipoUsuario", "Responsavel"))
                                    {
                                        <li>
                                            <a class="dropdown-item dropdown-item-custom" href="/Perfil">
                                                <i class="fas fa-heart"></i> Minha Família
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item dropdown-item-custom" href="/Perfil/Editar">
                                                <i class="fas fa-edit"></i> Editar Perfil
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item dropdown-item-custom" href="/Perfil/MinhasCriancas">
                                                <i class="fas fa-child"></i> Minhas Crianças
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider dropdown-divider-custom"></li>
                                    }
                                    @if (User.HasClaim("TipoUsuario", "Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item dropdown-item-custom" href="/Admin/Dashboard">
                                                <i class="fas fa-shield-alt"></i> Painel Admin
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider dropdown-divider-custom"></li>
                                    }
                                    <li>
                                        <form asp-action="Logout" asp-controller="Auth" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item dropdown-item-custom border-0 bg-transparent w-100 text-start">
                                                <i class="fas fa-sign-out-alt"></i> Sair da Família
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" href="/Login">
                                    <i class="fas fa-sign-in-alt"></i> Entrar
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom">
        <div class="container">
            <div class="footer-content">
                <div class="footer-brand">
                    <i class="fas fa-heart"></i>
                    <span>&copy; 2024 Casa Espírita Trabalhadores de Jesus - Todos os direitos reservados</span>
                </div>
                <div class="footer-links">
                    <span class="small">Av. Professor Flávio Pires de Camargo, 56 - Caetetuba, Atibaia/SP</span>
                    <span class="small">|</span>
                    <a href="tel:1194155-6472" class="small">(11) 94155-6472</a>
                </div>
            </div>
            <div class="text-center mt-2">
                <small class="opacity-75">
                    <i class="fas fa-quote-left me-1"></i>
                    "Resgatamos vidas e fazemos acreditar que existe sempre um caminho melhor a ser seguido"
                    <i class="fas fa-quote-right ms-1"></i>
                </small>
            </div>
        </div>
    </footer>

    <!-- jQuery e Bootstrap JS via CDN - SEM DUPLICAÇÃO -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
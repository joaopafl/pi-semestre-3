@model Pi_Odonto.Models.Dentista

@{
    ViewData["Title"] = "Dashboard - Dentista";
}

<style>
    .dashboard-header {
        background: linear-gradient(135deg, #2c5282, #4a90e2);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .stat-icon {
        font-size: 3rem;
        margin-bottom: 15px;
    }

    .agendamento-item {
        background: white;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 15px;
        border-left: 4px solid #4a90e2;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
</style>

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="dashboard-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1><i class="fas fa-tooth"></i> Bem-vindo, Dr(a). @Model.Nome!</h1>
                <p class="mb-0">CRO: @Model.Cro | @Model.Email</p>
            </div>
            <div class="col-md-4 text-end">
                <form asp-action="Logout" asp-controller="Auth" method="post" class="d-inline">
                    <button type="submit" class="btn btn-light">
                        <i class="fas fa-sign-out-alt"></i> Sair
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Estatísticas -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="stat-card text-center">
                <div class="stat-icon" style="color: #4a90e2;">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <h3>@ViewBag.TotalAgendamentos</h3>
                <p class="text-muted">Total de Agendamentos</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card text-center">
                <div class="stat-icon" style="color: #48bb78;">
                    <i class="fas fa-calendar-day"></i>
                </div>
                <h3>@ViewBag.AgendamentosHoje</h3>
                <p class="text-muted">Agendamentos Hoje</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card text-center">
                <div class="stat-icon" style="color: #f56565;">
                    <i class="fas fa-user-check"></i>
                </div>
                <h3>@ViewBag.AtendimentosRealizados</h3>
                <p class="text-muted">Atendimentos Realizados</p>
            </div>
        </div>
    </div>

    <!-- Próximos Agendamentos -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt"></i> Próximos Agendamentos</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ProximosAgendamentos != null && ViewBag.ProximosAgendamentos.Count > 0)
                    {
                        @foreach (var agendamento in ViewBag.ProximosAgendamentos)
                        {
                            <div class="agendamento-item">
                                <div class="row align-items-center">
                                    <div class="col-md-3">
                                        <strong><i class="fas fa-child"></i> @agendamento.Crianca.Nome</strong>
                                    </div>
                                    <div class="col-md-3">
                                        <i class="fas fa-calendar"></i> @agendamento.DataAgendamento.ToString("dd/MM/yyyy")
                                    </div>
                                    <div class="col-md-3">
                                        <i class="fas fa-clock"></i> @agendamento.HoraAgendamento.ToString(@"hh\:mm")
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <a href="/Atendimento/Criar?agendamentoId=@agendamento.Id" class="btn btn-sm btn-success">
                                            <i class="fas fa-tooth"></i> Iniciar Atendimento
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-calendar-times fa-3x mb-3"></i>
                            <p>Nenhum agendamento próximo</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Informações do Dentista -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-user"></i> Meus Dados</h6>
                </div>
                <div class="card-body">
                    <p><strong>Nome:</strong> @Model.Nome</p>
                    <p><strong>CPF:</strong> @Model.Cpf</p>
                    <p><strong>CRO:</strong> @Model.Cro</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Telefone:</strong> @Model.Telefone</p>
                    <p><strong>Endereço:</strong> @Model.Endereco</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="fas fa-clock"></i> Disponibilidade</h6>
                </div>
                <div class="card-body">
                    @if (Model.Disponibilidades != null && Model.Disponibilidades.Any())
                    {
                        @foreach (var disp in Model.Disponibilidades.OrderBy(d => d.DiaSemana))
                        {
                            <p class="mb-2">
                                <i class="fas fa-calendar-check text-success"></i>
                                <strong>@disp.DiaSemana:</strong>
                                @disp.HoraInicio.ToString(@"hh\:mm") às @disp.HoraFim.ToString(@"hh\:mm")
                            </p>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Nenhuma disponibilidade cadastrada</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Escalas de Trabalho";
}
@model IEnumerable<Pi_Odonto.Models.EscalaTrabalho>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="text-primary">
                <i class="fas fa-clock"></i> Escalas de Trabalho
            </h1>
            <p class="text-muted">Gerenciar escalas de trabalho disponíveis para os dentistas</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group">
                <a href="@Url.Action("Index")" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left"></i> Voltar para Dentistas
                </a>
                <a href="@Url.Action("CreateEscala")" class="btn btn-success">
                    <i class="fas fa-plus"></i> Nova Escala
                </a>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-list"></i> Escalas Cadastradas
                    <span class="badge bg-light text-dark">@Model.Count()</span>
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Dia da Semana</th>
                                <th>Horário de Início</th>
                                <th>Horário de Fim</th>
                                <th>Duração</th>
                                <th width="200">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var escala in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-info">#@escala.IdEscala</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-calendar-day text-primary me-2"></i>
                                            <strong>@escala.DtDisponivel</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">@escala.HrInicio:00</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-danger">@escala.HrFim:00</span>
                                    </td>
                                    <td>
                                        @{
                                            var duracao = escala.HrFim - escala.HrInicio;
                                        }
                                        <span class="badge bg-info">@duracao horas</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("EditEscala", new { id = escala.IdEscala })" class="btn btn-outline-warning" title="Editar">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <a href="@Url.Action("DeleteEscala", new { id = escala.IdEscala })" class="btn btn-outline-danger" title="Excluir">
                                                <i class="fas fa-trash"></i> Excluir
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Resumo -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-12">
                                <h5 class="text-primary">@Model.Count()</h5>
                                <small class="text-muted">Total de Escalas Cadastradas</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-clock fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Nenhuma escala de trabalho cadastrada</h4>
                <p class="text-muted">Comece criando a primeira escala de trabalho para os dentistas.</p>
                <a href="@Url.Action("CreateEscala")" class="btn btn-success">
                    <i class="fas fa-plus"></i> Criar Primeira Escala
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}

@{
    ViewData["Title"] = "Lista de Responsáveis";
}
@model IEnumerable<Pi_Odonto.Models.Responsavel>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="text-primary">
                <i class="fas fa-users"></i> Lista de Responsáveis
            </h1>
            <p class="text-muted">Gerenciar responsáveis e suas crianças</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Novo Responsável
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-list"></i> Responsáveis Cadastrados
                    <span class="badge bg-light text-dark">@Model.Count()</span>
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>CPF</th>
                                <th>Telefone</th>
                                <th>Email</th>
                                <th>Crianças</th>
                                <th width="200">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var responsavel in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user text-primary me-2"></i>
                                            <strong>@responsavel.Nome</strong>
                                        </div>
                                    </td>
                                    <td>
                                        @if (responsavel.Cpf.Length == 11)
                                        {
                                            @($"{responsavel.Cpf.Substring(0, 3)}.{responsavel.Cpf.Substring(3, 3)}.{responsavel.Cpf.Substring(6, 3)}-{responsavel.Cpf.Substring(9, 2)}")
                                        }
                                        else
                                        {
                                            @responsavel.Cpf
                                        }
                                    </td>
                                    <td>
                                        @if (responsavel.Telefone.Length == 11)
                                        {
                                            <a href="tel:@responsavel.Telefone" class="text-decoration-none">
                                                @($"({responsavel.Telefone.Substring(0, 2)}) {responsavel.Telefone.Substring(2, 5)}-{responsavel.Telefone.Substring(7, 4)}")
                                            </a>
                                        }
                                        else
                                        {
                                            @responsavel.Telefone
                                        }
                                    </td>
                                    <td>
                                        <a href="mailto:@responsavel.Email" class="text-decoration-none">
                                            @responsavel.Email
                                        </a>
                                    </td>
                                    <td>
                                        @if (responsavel.Criancas != null && responsavel.Criancas.Any())
                                        {
                                            <div>
                                                <span class="badge bg-info">@responsavel.Criancas.Count</span>
                                                <small class="text-muted d-block">
                                                    @foreach (var crianca in responsavel.Criancas.Take(3))
                                                    {
                                                        <div>• @crianca.Nome (@crianca.Parentesco)</div>
                                                    }
                                                    @if (responsavel.Criancas.Count > 3)
                                                    {
                                                        <div class="text-muted">+ @(responsavel.Criancas.Count - 3) mais...</div>
                                                    }
                                                </small>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">0</span>
                                            <small class="text-muted d-block">Nenhuma criança</small>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Details", new { id = responsavel.Id })" class="btn btn-outline-info" title="Ver detalhes">
                                                <i class="fas fa-eye"></i> Detalhes
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = responsavel.Id })" class="btn btn-outline-warning" title="Editar">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = responsavel.Id })" class="btn btn-outline-danger" title="Excluir">
                                                <i class="fas fa-trash"></i> Excluir
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Resumo -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h5 class="text-primary">@Model.Count()</h5>
                                <small class="text-muted">Total de Responsáveis</small>
                            </div>
                            <div class="col-md-4">
                                <h5 class="text-info">@Model.Sum(r => r.Criancas?.Count ?? 0)</h5>
                                <small class="text-muted">Total de Crianças</small>
                            </div>
                            <div class="col-md-4">
                                <h5 class="text-success">@Model.Average(r => r.Criancas?.Count ?? 0).ToString("F1")</h5>
                                <small class="text-muted">Média de Crianças por Responsável</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-user-plus fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Nenhum responsável cadastrado</h4>
                <p class="text-muted">Comece cadastrando o primeiro responsável no sistema.</p>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Cadastrar Primeiro Responsável
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}
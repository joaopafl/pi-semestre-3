@{
    ViewData["Title"] = "Cadastro Realizado com Sucesso";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h1 class="text-success mb-3">Cadastro Realizado!</h1>
                    <p class="lead mb-4">
                        Seu cadastro foi realizado com sucesso. Agora você está registrado em nosso sistema.
                    </p>
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle"></i>
                        <strong>Próximos passos:</strong> Aguarde o contato de nossa equipe para mais informações sobre os próximos procedimentos.
                    </div>
                    <div class="d-grid gap-2">
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="fas fa-home"></i> Voltar ao Início
                        </a>
                        <a href="/Cadastro" class="btn btn-outline-secondary">
                            <i class="fas fa-plus"></i> Fazer Novo Cadastro
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}
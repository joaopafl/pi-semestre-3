@model Pi_Odonto.Models.Crianca
@{
    ViewData["Title"] = "Editar Criança";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var opcoesParentesco = new List<string> { "Pai", "Mãe", "Avô", "Avó", "Tio", "Tia", "Padrasto", "Madrasta", "Tutor Legal" };
}

<div class="container mt-4">
    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">
                        <i class="fas fa-child"></i> Editar Criança
                    </h2>
                    <p class="mb-0 mt-2">Atualize os dados da criança</p>
                </div>

                <div class="card-body">
                    <form asp-action="EditarCrianca" method="post" id="editarCriancaForm">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="IdResponsavel" />
                        <input type="hidden" asp-for="Ativa" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <h4 class="text-primary mb-3">
                            <i class="fas fa-user"></i> Dados da Criança
                        </h4>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Nome" class="form-label">Nome Completo</label>
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Cpf" class="form-label">CPF</label>
                                    <input asp-for="Cpf" class="form-control" id="cpfInput" />
                                    <span asp-validation-for="Cpf" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DataNascimento" class="form-label">Data de Nascimento</label>
                                    <input asp-for="DataNascimento" type="date" class="form-control" />
                                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Parentesco" class="form-label">Parentesco</label>
                                    <select asp-for="Parentesco" class="form-control">
                                        <option value="">Selecione...</option>
                                        @foreach (var parentesco in opcoesParentesco)
                                        {
                                            <option value="@parentesco">@parentesco</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Parentesco" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Responsável:</strong> @(Model.Responsavel?.Nome ?? "Não informado")
                        </div>

                        <hr class="my-4">

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@(ViewBag.IsAdmin == true ? "/Admin" : "/Perfil")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Aplica máscara ao CPF
            $('#cpfInput').mask('000.000.000-00', { reverse: true });
            
            // Remove máscara antes do submit para enviar valor limpo
            $('#editarCriancaForm').on('submit', function() {
                $('#cpfInput').unmask();
            });
        });
    </script>
    
    <partial name="_ValidationScriptsPartial" />
}
    function atualizarTitulosCriancas() {
        var criancaForms = document.querySelectorAll('#criancas-container .crianca-form');
        criancaIndex = criancaForms.length;

        criancaForms.forEach((form, index) => {
            var headerSpan = form.querySelector('.crianca-header span');
            if (headerSpan) {
                headerSpan.innerHTML = '<i class="fas fa-child"></i> Criança ' + (index + 1);
            }

            form.setAttribute('data-index', index);
            form.querySelectorAll('[name^="Criancas["]').forEach(input => {
                var oldName = input.getAttribute('name');
                var newName = oldName.replace(/\[\d+\]/g, '[' + index + ']');
                input.setAttribute('name', newName);

                var validationSpan = document.querySelector(`span[data-valmsg-for="${oldName}"]`);
                if (validationSpan) {
                    validationSpan.setAttribute('data-valmsg-for', newName);
                }
            });

            var removeBtn = form.querySelector('.remove-btn');
            if (removeBtn) {
                removeBtn.setAttribute('onclick', 'removerCrianca(' + index + ')');
                if (criancaForms.length === 1) {
                    removeBtn.style.display = 'none';
                } else {
                    removeBtn.style.display = 'block';
                }
            }
        });
    }


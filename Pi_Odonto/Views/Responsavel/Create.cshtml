        const confirmarSenhaInput = document.querySelector('input[name="ConfirmarSenha"]');
        const senha = senhaInput.value;
        const confirmarSenha = confirmarSenhaInput.value;

        if (senha !== confirmarSenha || senha.length < 6) {
            confirmarSenhaInput.classList.add('is-invalid');
            if (senha !== confirmarSenha) {
                //alert('As senhas não coincidem!');
            } else {
                //alert('A senha deve ter no mínimo 6 caracteres!');
            }
            isValid = false;
        }

        // Validação específica do CPF DO RESPONSÁVEL (AGUARDA VALIDAÇÃO ASSÍNCRONA)
        const cpfInput = document.getElementById('cpfInput');
        const cpfError = document.getElementById('cpf-error');
        const cpfValue = cpfInput.value;

        if (cpfValue.length !== 14) {
            cpfError.textContent = 'CPF incompleto (formato: 000.000.000-00)';
            cpfError.style.display = 'block';
            cpfInput.classList.add('is-invalid');
            isValid = false;
        } else {
            const cpfValido = validarCPF(cpfValue);

            if (!cpfValido) {
                cpfError.textContent = 'CPF inválido';
                cpfError.style.display = 'block';
                cpfInput.classList.add('is-invalid');
                isValid = false;
            } else {
                // CPF tem formato válido, agora FAZ A VALIDAÇÃO ASSÍNCRONA
                const cpfExisteNoBanco = await verificarCpfExistente(
                    cpfValue,
                    cpfInput,
                    cpfError,
                    'cpf-spinner'
                );

                if (!cpfExisteNoBanco) {
                    // CPF já existe no banco (responsável ou criança)
                    cpfInput.classList.add('is-invalid');
                    isValid = false;
                } else {
                    // Tudo OK com o CPF
                    cpfError.style.display = 'none';
                    cpfError.textContent = '';
                    cpfInput.classList.remove('is-invalid');
                }
            }
        }

        // Verifica validações assíncronas de Email e Telefone
        const emailError = document.getElementById('email-error');
        const telefoneError = document.getElementById('telefone-error');

        if (emailError.style.display === 'block') {
            document.getElementById('emailInput').classList.add('is-invalid');
            isValid = false;
        }

        if (telefoneError.style.display === 'block') {
            document.getElementById('telefoneInput').classList.add('is-invalid');
            isValid = false;
        }

        if (!isValid) {
            const firstInvalid = document.querySelector('#step1-content .is-invalid');
            if (firstInvalid) {
                firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
            //alert('Por favor, corrija os erros antes de prosseguir.');
        }

        return isValid;
    }

    // ====================================================================================
    // VALIDAÇÃO ETAPA 2 (CRIANÇAS)
    // ====================================================================================
        async function validarEtapa2() {
        let isValid = true;
        const criancaForms = document.querySelectorAll('.crianca-form');
        const cpfsCriancas = [];
        const cpfResponsavel = document.getElementById('cpfInput').value.replace(/\D/g, '');
        const validacoesAssincronas = [];

        criancaForms.forEach((form, index) => {
            // Limpa erros anteriores
            form.querySelectorAll('.is-invalid').forEach(el => {
                el.classList.remove('is-invalid');
            });
            form.querySelectorAll('.crianca-error-message').forEach(el => {
                el.remove();
            });

            // Validar campos obrigatórios
            const nomeInput = form.querySelector('input[name*=".Nome"]');
            const cpfInput = form.querySelector('.cpf-crianca');
            const dataNascInput = form.querySelector('input[type="date"]');
            const parentescoSelect = form.querySelector('select[name*=".Parentesco"]');

            // Validação de Nome
            if (!nomeInput.value.trim()) {
                nomeInput.classList.add('is-invalid');
                mostrarErroCrianca(nomeInput, 'Nome é obrigatório');
                isValid = false;
            }

            // Validação de Parentesco
            if (!parentescoSelect.value) {
                parentescoSelect.classList.add('is-invalid');
                mostrarErroCrianca(parentescoSelect, 'Selecione o parentesco');
                isValid = false;
            }

            // Validação de Data de Nascimento
            if (!dataNascInput.value) {
                dataNascInput.classList.add('is-invalid');
                mostrarErroCrianca(dataNascInput, 'Data de nascimento é obrigatória');
                isValid = false;
            } else {
                const dataNasc = new Date(dataNascInput.value);
                const hoje = new Date();
                let idade = hoje.getFullYear() - dataNasc.getFullYear();
                const m = hoje.getMonth() - dataNasc.getMonth();

                if (m < 0 || (m === 0 && hoje.getDate() < dataNasc.getDate())) {
                    idade--;
                }

                if (dataNasc > hoje) {
                    dataNascInput.classList.add('is-invalid');
                    mostrarErroCrianca(dataNascInput, 'Data não pode ser futura');
                    isValid = false;
                } else if (idade >= 18) {
                    dataNascInput.classList.add('is-invalid');
                    mostrarErroCrianca(dataNascInput, 'A criança deve ter menos de 18 anos');
                    isValid = false;
                }
            }

            // Validação de CPF da criança
            if (!cpfInput.value.trim()) {
                cpfInput.classList.add('is-invalid');
                mostrarErroCrianca(cpfInput, 'CPF é obrigatório');
                isValid = false;
            } else {
                const cpfPuro = cpfInput.value.replace(/\D/g, '');

                if (cpfPuro.length !== 11) {
                    cpfInput.classList.add('is-invalid');
                    mostrarErroCrianca(cpfInput, 'CPF incompleto (11 dígitos)');
                    isValid = false;
                } else if (!validarCPF(cpfInput.value)) {
                    cpfInput.classList.add('is-invalid');
                    mostrarErroCrianca(cpfInput, 'CPF inválido');
                    isValid = false;
                } else if (cpfPuro === cpfResponsavel) {
                    cpfInput.classList.add('is-invalid');
                    mostrarErroCrianca(cpfInput, 'CPF da criança não pode ser igual ao do responsável');
                    isValid = false;
                } else {
                    cpfsCriancas.push({ cpf: cpfPuro, input: cpfInput, index: index });
                    // Adiciona validação assíncrona na fila
                    validacoesAssincronas.push(verificarCpfCriancaExistente(cpfInput.value, cpfInput, index));
                }
            }
        });

        // Verificar CPFs duplicados entre crianças
        const cpfsUnicos = {};
        cpfsCriancas.forEach(item => {
            if (cpfsUnicos[item.cpf]) {
                item.input.classList.add('is-invalid');
                cpfsUnicos[item.cpf].input.classList.add('is-invalid');
                mostrarErroCrianca(item.input, 'CPF duplicado com outra criança');
                mostrarErroCrianca(cpfsUnicos[item.cpf].input, 'CPF duplicado com outra criança');
                isValid = false;
            } else {
                cpfsUnicos[item.cpf] = item;
            }
        });

        // Aguarda todas as validações assíncronas
        if (validacoesAssincronas.length > 0) {
            const resultados = await Promise.all(validacoesAssincronas);
            if (resultados.some(r => r === false)) {
                isValid = false;
            }
        }

        if (!isValid) {
            const firstInvalid = document.querySelector('#step2-content .is-invalid');
            if (firstInvalid) {
                firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
            //alert('Por favor, corrija os erros nos dados das crianças.');
        }

        return isValid;
    }

    // Função auxiliar para mostrar mensagens de erro
    function mostrarErroCrianca(inputElement, mensagem) {
        // Remove mensagem anterior se existir
        const errorAnterior = inputElement.parentElement.querySelector('.crianca-error-message');
        if (errorAnterior) {
            errorAnterior.remove();
        }

        // Cria nova mensagem
        const errorDiv = document.createElement('div');
        errorDiv.className = 'crianca-error-message show';
        errorDiv.textContent = mensagem;

        // Insere após o input
        inputElement.parentElement.appendChild(errorDiv);
    }


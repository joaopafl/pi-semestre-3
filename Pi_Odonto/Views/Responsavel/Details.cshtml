@{
    ViewData["Title"] = "Detalhes do Responsável";
}
@model Pi_Odonto.Models.Responsavel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <!-- Header -->
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white text-center">
                    <h2 class="mb-0">
                        <i class="fas fa-user"></i> Detalhes do Responsável
                    </h2>
                </div>

                <!-- Dados do Responsável -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="fas fa-user"></i> Nome:
                                </label>
                                <p class="form-control-plaintext border-bottom">@Model.Nome</p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="fas fa-id-card"></i> CPF:
                                </label>
                                <p class="form-control-plaintext border-bottom">
                                    @if (Model.Cpf.Length == 11)
                                    {
                                        @($"{Model.Cpf.Substring(0, 3)}.{Model.Cpf.Substring(3, 3)}.{Model.Cpf.Substring(6, 3)}-{Model.Cpf.Substring(9, 2)}")
                                    }
                                    else
                                    {
                                        @Model.Cpf
                                    }
                                </p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="fas fa-phone"></i> Telefone:
                                </label>
                                <p class="form-control-plaintext border-bottom">
                                    @if (Model.Telefone.Length == 11)
                                    {
                                        <a href="tel:@Model.Telefone" class="text-decoration-none">
                                            @($"({Model.Telefone.Substring(0, 2)}) {Model.Telefone.Substring(2, 5)}-{Model.Telefone.Substring(7, 4)}")
                                        </a>
                                    }
                                    else
                                    {
                                        @Model.Telefone
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="fas fa-envelope"></i> Email:
                                </label>
                                <p class="form-control-plaintext border-bottom">
                                    <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                                </p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="fas fa-map-marker-alt"></i> Endereço:
                                </label>
                                <p class="form-control-plaintext border-bottom">@Model.Endereco</p>
                            </div>

                            @if (Model.DataCadastro != default(DateTime))
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold text-primary">
                                        <i class="fas fa-calendar"></i> Data de Cadastro:
                                    </label>
                                    <p class="form-control-plaintext border-bottom">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            }

                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="fas fa-check-circle"></i> Status:
                                </label>
                                <p class="form-control-plaintext">
                                    @if (Model.Ativo)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check"></i> Ativo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="fas fa-times"></i> Inativo
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Crianças Cadastradas -->
            <div class="card shadow-lg mt-4">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-child"></i> Crianças Cadastradas
                    </h4>
                    <span class="badge bg-light text-dark fs-6">@(Model.Criancas?.Count ?? 0)</span>
                </div>

                <div class="card-body">
                    @if (Model.Criancas != null && Model.Criancas.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-user"></i> Nome</th>
                                        <th><i class="fas fa-id-card"></i> CPF</th>
                                        <th><i class="fas fa-birthday-cake"></i> Data de Nascimento</th>
                                        <th><i class="fas fa-child"></i> Idade</th>
                                        <th><i class="fas fa-users"></i> Parentesco</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var crianca in Model.Criancas)
                                    {
                                        var idade = DateTime.Now.Year - crianca.DataNascimento.Year;
                                        if (DateTime.Now.DayOfYear < crianca.DataNascimento.DayOfYear)
                                            idade--;

                                        <tr>
                                            <td>
                                                <strong class="text-primary">@crianca.Nome</strong>
                                            </td>
                                            <td>
                                                @if (crianca.Cpf.Length == 11)
                                                {
                                                    @($"{crianca.Cpf.Substring(0, 3)}.{crianca.Cpf.Substring(3, 3)}.{crianca.Cpf.Substring(6, 3)}-{crianca.Cpf.Substring(9, 2)}")
                                                }
                                                else
                                                {
                                                    @crianca.Cpf
                                                }
                                            </td>
                                            <td>@crianca.DataNascimento.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge bg-info">@idade anos</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@crianca.Parentesco</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-child fa-3x mb-3"></i>
                            <p class="fs-5">Nenhuma criança cadastrada.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Ações -->
            <div class="card shadow-lg mt-4">
                <div class="card-body text-center">
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning btn-lg">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash"></i> Excluir
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                            <i class="fas fa-list"></i> Voltar para Lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}
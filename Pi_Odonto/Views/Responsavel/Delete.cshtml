@{
    ViewData["Title"] = "Excluir Responsável";
}
@model Pi_Odonto.Models.Responsavel

<div class="text-center">
    <h1>Confirmar Exclusão</h1>

    <h3>Tem certeza que deseja excluir este responsável e todas as suas crianças?</h3>

    <div>
        <h4>Dados do Responsável:</h4>
        <p><strong>Nome:</strong> @Model.Nome</p>
        <p><strong>CPF:</strong> @Model.Cpf</p>
        <p><strong>Telefone:</strong> @Model.Telefone</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Endereço:</strong> @Model.Endereco</p>
    </div>

    @if (Model.Criancas.Any())
    {
        <div>
            <h4>Crianças que serão excluídas:</h4>
            <ul>
                @foreach (var crianca in Model.Criancas)
                {
                    <li>
                        <strong>@crianca.Nome</strong> - CPF: @crianca.Cpf
                        - Nascimento: @crianca.DataNascimento.ToString("dd/MM/yyyy")
                        - Parentesco: @crianca.Parentesco
                    </li>
                }
            </ul>
        </div>
    }

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" onclick="return confirm('Esta ação não pode ser desfeita. Confirma a exclusão?')">
            Confirmar Exclusão
        </button>
        <a href="@Url.Action("Index")">Cancelar</a>
    </form>
</div>
@{
    ViewData["Title"] = "Minha Família - Casa Espírita Trabalhadores de Jesus";
}
@model Pi_Odonto.Models.Responsavel

<style>
    :root {
        --cor-primaria: #4A90E2;
        --cor-secundaria: #66BB6A;
        --cor-accent: #FFD700;
        --cor-info: #17a2b8;
        --cor-amor: #FF6B8A;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
    }

    .container-compacto {
        max-width: 1000px;
        margin: 1rem auto;
        padding: 0 1rem;
    }

    .header-compacto {
        background: linear-gradient(135deg, var(--cor-primaria), var(--cor-secundaria));
        color: white;
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 15px;
        text-align: center;
    }

    .header-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .header-subtitle {
        font-size: 0.85rem;
        opacity: 0.9;
    }

    .card-compacto {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        border: none;
        margin-bottom: 1rem;
        overflow: hidden;
    }

        .card-compacto::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(135deg, var(--cor-primaria), var(--cor-secundaria));
        }

    .sidebar-compacto {
        background: white;
        border-radius: 12px;
        padding: 1rem;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        border-top: 3px solid var(--cor-amor);
        margin-bottom: 1rem;
    }

    .avatar-icon-compacto {
        font-size: 2.5rem;
        color: var(--cor-primaria);
        margin-bottom: 0.5rem;
    }

    .user-name-compacto {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.25rem;
    }

    .user-email-compacto {
        color: #6c757d;
        font-size: 0.8rem;
        margin-bottom: 1rem;
    }

    .btn-compacto {
        border-radius: 8px;
        padding: 0.4rem 0.8rem;
        font-size: 0.8rem;
        font-weight: 500;
        margin-bottom: 0.4rem;
        border: none;
    }

    .btn-primary-compacto {
        background: var(--cor-primaria);
        color: white;
    }

    .btn-info-compacto {
        background: var(--cor-secundaria);
        color: white;
    }

    .btn-danger-compacto {
        background: transparent;
        border: 1px solid var(--cor-amor);
        color: var(--cor-amor);
    }

    .card-header-compacto {
        background: linear-gradient(135deg, var(--cor-primaria), var(--cor-secundaria));
        color: white;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        font-weight: 600;
    }

    .card-header-info-compacto {
        background: linear-gradient(135deg, var(--cor-secundaria), var(--cor-accent));
    }

    .card-header-warning-compacto {
        background: linear-gradient(135deg, var(--cor-accent), #FF8A65);
        color: #2c3e50;
    }

    .card-body-compacto {
        padding: 1rem;
    }

    .info-row {
        margin-bottom: 0.75rem;
    }

    .info-label-compacto {
        font-weight: 500;
        color: #2c3e50;
        font-size: 0.8rem;
        margin-bottom: 0.2rem;
        display: flex;
        align-items: center;
    }

        .info-label-compacto i {
            color: var(--cor-primaria);
            margin-right: 0.3rem;
            width: 12px;
            font-size: 0.7rem;
        }

    .info-value-compacto {
        color: #6c757d;
        font-size: 0.85rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #f0f0f0;
    }

        .info-value-compacto:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

        .info-value-compacto a {
            color: var(--cor-primaria);
            text-decoration: none;
        }

    .child-card-compacto {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 0.75rem;
        border-left: 3px solid var(--cor-accent);
        margin-bottom: 0.75rem;
    }

    .child-name-compacto {
        color: var(--cor-primaria);
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }

        .child-name-compacto i {
            margin-right: 0.3rem;
            color: var(--cor-amor);
            font-size: 0.8rem;
        }

    .child-info-compacto {
        font-size: 0.75rem;
        color: #6c757d;
        line-height: 1.4;
    }

        .child-info-compacto div {
            margin-bottom: 0.2rem;
        }

        .child-info-compacto strong {
            color: #2c3e50;
        }

    .badge-compacto {
        background: var(--cor-secundaria);
        color: white;
        border-radius: 10px;
        padding: 0.2rem 0.5rem;
        font-size: 0.7rem;
        font-weight: 500;
    }

    .contact-info-compacto {
        background: #e3f2fd;
        border-radius: 8px;
        padding: 0.75rem;
        border-left: 3px solid var(--cor-primaria);
        font-size: 0.8rem;
    }

    .empty-state-compacto {
        text-align: center;
        padding: 1.5rem;
        color: #6c757d;
    }

        .empty-state-compacto i {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            color: var(--cor-accent);
            opacity: 0.7;
        }

    .text-center-btn {
        text-align: center;
        margin-top: 0.75rem;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .container-compacto

    {
        margin: 0.5rem auto;
    }

    .sidebar-compacto {
        margin-bottom: 1rem;
    }

    .avatar-icon-compacto {
        font-size: 2rem;
    }

    .header-title {
        font-size: 1.1rem;
    }

    }
</style>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<div class="container-compacto">
    <!-- Header Compacto -->
    <div class="header-compacto">
        <h1 class="header-title">
            <i class="fas fa-heart me-2"></i> Minha Família Espiritual
        </h1>
        <p class="header-subtitle mb-0">Casa Espírita Trabalhadores de Jesus</p>
    </div>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-heart me-2"></i> @TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Sidebar Compacto -->
        <div class="col-lg-3 col-md-4">
            <div class="sidebar-compacto">
                <i class="fas fa-user-circle avatar-icon-compacto"></i>
                <h5 class="user-name-compacto">@Model.Nome</h5>
                <p class="user-email-compacto">@Model.Email</p>

                <div class="d-grid gap-1">
                    <a href="/Perfil/Editar" class="btn btn-compacto btn-primary-compacto">
                        <i class="fas fa-edit me-1"></i> Editar
                    </a>
                    <a href="/Perfil/MinhasCriancas" class="btn btn-compacto btn-info-compacto">
                        <i class="fas fa-child me-1"></i> Crianças
                    </a>
                    <form asp-action="Logout" asp-controller="Auth" method="post" class="d-inline">
                        <button type="submit" class="btn btn-compacto btn-danger-compacto w-100">
                            <i class="fas fa-sign-out-alt me-1"></i> Sair
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Conteúdo Principal -->
        <div class="col-lg-9 col-md-8">
            <!-- Dados Pessoais -->
            <div class="card-compacto">
                <div class="card-header-compacto">
                    <i class="fas fa-user me-2"></i> Meus Dados
                </div>
                <div class="card-body-compacto">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-row">
                                <div class="info-label-compacto">
                                    <i class="fas fa-user"></i> Nome
                                </div>
                                <div class="info-value-compacto">@Model.Nome</div>
                            </div>

                            <div class="info-row">
                                <div class="info-label-compacto">
                                    <i class="fas fa-id-card"></i> CPF
                                </div>
                                <div class="info-value-compacto">
                                    @if (Model.Cpf.Length == 11)
                                    {
                                        @($"{Model.Cpf.Substring(0, 3)}.{Model.Cpf.Substring(3, 3)}.{Model.Cpf.Substring(6, 3)}-{Model.Cpf.Substring(9, 2)}")
                                    }
                                    else
                                    {
                                        @Model.Cpf
                                    }
                                </div>
                            </div>

                            <div class="info-row">
                                <div class="info-label-compacto">
                                    <i class="fas fa-phone"></i> Telefone
                                </div>
                                <div class="info-value-compacto">
                                    @if (Model.Telefone.Length == 11)
                                    {
                                        <a href="tel:@Model.Telefone">
                                            @($"({Model.Telefone.Substring(0, 2)}) {Model.Telefone.Substring(2, 5)}-{Model.Telefone.Substring(7, 4)}")
                                        </a>
                                    }
                                    else
                                    {
                                        @Model.Telefone
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-row">
                                <div class="info-label-compacto">
                                    <i class="fas fa-envelope"></i> Email
                                </div>
                                <div class="info-value-compacto">
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                </div>
                            </div>

                            <div class="info-row">
                                <div class="info-label-compacto">
                                    <i class="fas fa-map-marker-alt"></i> Endereço
                                </div>
                                <div class="info-value-compacto">@Model.Endereco</div>
                            </div>

                            @if (Model.Ativo)
                            {
                                <div class="info-row">
                                    <div class="info-label-compacto">
                                        <i class="fas fa-heart"></i> Status
                                    </div>
                                    <div class="info-value-compacto">
                                        <span class="badge-compacto">
                                            <i class="fas fa-check-circle me-1"></i> Família Ativa
                                        </span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Seção de Crianças -->
            <div class="card-compacto">
                <div class="card-header-compacto card-header-info-compacto">
                    <i class="fas fa-child me-2"></i> Nossas Crianças
                    <span class="badge bg-light text-dark ms-2">@(Model.Criancas?.Count ?? 0)</span>
                </div>
                <div class="card-body-compacto">
                    @if (Model.Criancas != null && Model.Criancas.Any())
                    {
                        <div class="row">
                            @foreach (var crianca in Model.Criancas)
                            {
                                <div class="col-lg-6">
                                    <div class="child-card-compacto">
                                        <h6 class="child-name-compacto">
                                            <i class="fas fa-child"></i> @crianca.Nome
                                        </h6>
                                        <div class="child-info-compacto">
                                            <div>
                                                <strong>CPF:</strong>
                                                @if (crianca.Cpf.Length == 11)
                                                {
                                                    @($"{crianca.Cpf.Substring(0, 3)}.{crianca.Cpf.Substring(3, 3)}.{crianca.Cpf.Substring(6, 3)}-{crianca.Cpf.Substring(9, 2)}")
                                                }
                                                else
                                                {
                                                    @crianca.Cpf
                                                }
                                            </div>
                                            <div><strong>Nascimento:</strong> @crianca.DataNascimento.ToString("dd/MM/yyyy")</div>
                                            <div>
                                                <strong>Idade:</strong>
                                                @{
                                                    var idade = DateTime.Now.Year - crianca.DataNascimento.Year;
                                                    if (DateTime.Now.DayOfYear < crianca.DataNascimento.DayOfYear) idade--;
                                                }
                                                @idade anos
                                            </div>
                                            <div><strong>Parentesco:</strong> @crianca.Parentesco</div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="text-center-btn">
                            <a href="/Perfil/MinhasCriancas" class="btn btn-compacto btn-primary-compacto">
                                <i class="fas fa-heart me-1"></i> Cuidar das Crianças
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state-compacto">
                            <i class="fas fa-child"></i>
                            <p class="mb-2">Ainda não há crianças cadastradas.</p>
                            <a href="/Perfil/Editar" class="btn btn-compacto btn-primary-compacto">
                                <i class="fas fa-plus me-1"></i> Cadastrar Criança
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Seção de Agenda -->
            <div class="card-compacto">
                <div class="card-header-compacto card-header-warning-compacto">
                    <i class="fas fa-calendar-alt me-2"></i> Minha Agenda
                </div>
                <div class="card-body-compacto">
                    <div class="empty-state-compacto">
                        <i class="fas fa-calendar-plus"></i>
                        <p class="mb-2">Nenhum agendamento encontrado.</p>
                        <p style="font-size: 0.75rem; margin-bottom: 1rem;">Agende consultas e cuidados para sua família.</p>

                        <div class="d-grid gap-1">
                            <button class="btn btn-compacto btn-primary-compacto" onclick="agendarConsulta()">
                                <i class="fas fa-plus me-1"></i> Agendar Consulta
                            </button>
                            <button class="btn btn-compacto btn-info-compacto" onclick="verAgenda()">
                                <i class="fas fa-calendar me-1"></i> Ver Agenda Completa
                            </button>
                        </div>

                        <div class="contact-info-compacto mt-3">
                            <div class="text-center">
                                <div class="info-label-compacto justify-content-center">
                                    <i class="fas fa-phone"></i> Contato para agendamentos
                                </div>
                                <div class="info-value-compacto">
                                    <a href="tel:1194155-6472">(11) 94155-6472</a>
                                </div>
                                <small style="font-size: 0.7rem; color: #6c757d;">
                                    <i class="fas fa-heart text-danger me-1"></i>
                                    "Cuidamos de você com amor"
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Confirmação antes de sair
    document.querySelector('form[action*="Logout"] button').addEventListener('click', function(e) {
        if (!confirm('Tem certeza que deseja sair da sua família espiritual?')) {
            e.preventDefault();
        }
    });

    // Funções da agenda
    function agendarConsulta() {
        // Implementar modal ou redirecionamento para agendamento
        alert('Funcionalidade em desenvolvimento!\nPor favor, entre em contato pelo telefone (11) 94155-6472 para agendar.');
    }

    function verAgenda() {
        // Implementar navegação para página de agenda completa
        alert('Agenda completa em desenvolvimento!\nEm breve você poderá visualizar todos os seus agendamentos.');
    }
</script>
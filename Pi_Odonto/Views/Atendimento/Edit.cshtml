@model Pi_Odonto.ViewModels.AtendimentoViewModel

@{
    ViewData["Title"] = "Editar Atendimento";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit"></i> Editar Atendimento
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Voltar
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <!-- Data do Atendimento -->
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="DataAtendimento" class="form-label">
                                        <i class="fas fa-calendar"></i> Data do Atendimento <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="DataAtendimento" class="form-control" type="date" required />
                                    <span asp-validation-for="DataAtendimento" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Horário do Atendimento -->
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="HorarioAtendimento" class="form-label">
                                        <i class="fas fa-clock"></i> Horário <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="HorarioAtendimento" class="form-control" type="time" required />
                                    <span asp-validation-for="HorarioAtendimento" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Duração -->
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="DuracaoAtendimento" class="form-label">
                                        <i class="fas fa-hourglass-half"></i> Duração (min) <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="DuracaoAtendimento" class="form-select" required>
                                        <option value="">Selecione a duração</option>
                                        <option value="15">15 minutos</option>
                                        <option value="30">30 minutos</option>
                                        <option value="45">45 minutos</option>
                                        <option value="60">1 hora</option>
                                        <option value="90">1h 30min</option>
                                        <option value="120">2 horas</option>
                                    </select>
                                    <span asp-validation-for="DuracaoAtendimento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Criança -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="IdCrianca" class="form-label">
                                        <i class="fas fa-child"></i> Criança <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="IdCrianca" class="form-select" required>
                                        <option value="0">Selecione uma criança</option>
                                        @if (Model.CriancasDisponiveis != null)
                                        {
                                            @foreach (var crianca in Model.CriancasDisponiveis)
                                            {
                                                <option value="@crianca.Id">@crianca.Nome - @crianca.DataNascimento.ToString("dd/MM/yyyy")</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="IdCrianca" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Dentista -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="IdDentista" class="form-label">
                                        <i class="fas fa-user-md"></i> Dentista <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="IdDentista" class="form-select" required>
                                        <option value="0">Selecione um dentista</option>
                                        @if (Model.DentistasDisponiveis != null)
                                        {
                                            @foreach (var dentista in Model.DentistasDisponiveis)
                                            {
                                                <option value="@dentista.Id">@dentista.Nome - CRO: @dentista.Cro</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="IdDentista" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Agenda removida temporariamente -->
                            <div class="col-md-12">
                                <div class="alert alert-warning">
                                    <i class="fas fa-info-circle"></i>
                                    <strong>Agenda:</strong> A funcionalidade de agenda será implementada posteriormente. Por enquanto, atendimentos não são vinculados a agendas.
                                </div>
                            </div>
                        </div>

                        <!-- Observações -->
                        <div class="form-group mb-3">
                            <label asp-for="Observacao" class="form-label">
                                <i class="fas fa-sticky-note"></i> Observações
                            </label>
                            <textarea asp-for="Observacao" class="form-control" rows="4"
                                      placeholder="Observações sobre o atendimento..." maxlength="100"></textarea>
                            <span asp-validation-for="Observacao" class="text-danger"></span>
                            <div class="form-text">Máximo de 100 caracteres. Informações complementares sobre o atendimento.</div>
                        </div>

                        <!-- Info sobre campos não editáveis -->
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Informações:</strong>
                            <ul class="mb-0 mt-2">
                                <li>O período de atendimento será de <strong id="periodo-info">--:-- às --:--</strong></li>
                                <li>O odontograma será vinculado posteriormente através de módulo específico</li>
                                <li>Todos os campos marcados com <span class="text-danger">*</span> são obrigatórios</li>
                            </ul>
                        </div>

                        <!-- Botões -->
                        <div class="form-group">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-check-circle"></i> Salvar Alterações
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Script para calcular e exibir horário de término em tempo real
        document.addEventListener('DOMContentLoaded', function() {
            const horarioInput = document.querySelector('input[name="HorarioAtendimento"]');
            const duracaoSelect = document.querySelector('select[name="DuracaoAtendimento"]');
            const periodoInfo = document.getElementById('periodo-info');

            function atualizarPeriodo() {
                if (horarioInput.value && duracaoSelect.value) {
                    const [horas, minutos] = horarioInput.value.split(':');
                    const inicio = new Date();
                    inicio.setHours(parseInt(horas), parseInt(minutos), 0, 0);

                    const duracao = parseInt(duracaoSelect.value);
                    const termino = new Date(inicio.getTime() + (duracao * 60000));

                    const horaInicio = horarioInput.value;
                    const horaTermino = termino.getHours().toString().padStart(2, '0') + ':' +
                                      termino.getMinutes().toString().padStart(2, '0');

                    periodoInfo.textContent = `${horaInicio} às ${horaTermino}`;
                    periodoInfo.style.fontWeight = 'bold';
                    periodoInfo.style.color = '#198754';
                } else {
                    periodoInfo.textContent = '--:-- às --:--';
                    periodoInfo.style.fontWeight = 'normal';
                    periodoInfo.style.color = 'inherit';
                }
            }

            // Atualizar na inicialização se já houver valores
            atualizarPeriodo();

            // Atualizar quando os campos mudarem
            horarioInput.addEventListener('change', atualizarPeriodo);
            duracaoSelect.addEventListener('change', atualizarPeriodo);
        });
    </script>
}

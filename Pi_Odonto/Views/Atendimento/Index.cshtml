@{
    ViewData["Title"] = "Lista de Atendimentos";
}
@model IEnumerable<Pi_Odonto.Models.Atendimento>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="text-primary">
                <i class="fas fa-calendar-check"></i> Lista de Atendimentos
            </h1>
            <p class="text-muted">Gerenciar atendimentos realizados</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Novo Atendimento
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-list"></i> Atendimentos Realizados
                    <span class="badge bg-light text-dark">@Model.Count()</span>
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Data</th>
                                <th>Horário/Duração</th>
                                <th>Criança</th>
                                <th>Dentista</th>
                                <th>Observações</th>
                                <th width="200">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-calendar text-primary me-2"></i>
                                            <div>
                                                <strong>@item.DataAtendimento.ToString("dd/MM/yyyy")</strong>
                                                <br>
                                                <small class="text-muted">@item.DataAtendimento.ToString("dddd")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-clock text-info me-2"></i>
                                            <div>
                                                <strong>@item.HorarioAtendimento.ToString(@"hh\:mm")</strong>
                                                <br>
                                                <small class="text-muted">
                                                    @item.DuracaoAtendimento min
                                                    <span class="text-muted">
                                                        (até @item.HorarioAtendimento.Add(TimeSpan.FromMinutes(item.DuracaoAtendimento)).ToString(@"hh\:mm"))
                                                    </span>
                                                </small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-child text-success me-2"></i>
                                            <div>
                                                <strong>@item.Crianca?.Nome</strong>
                                                @if (item.Crianca != null)
                                                {
                                                    <br>
                                                    <small class="text-muted">@item.Crianca.DataNascimento.ToString("dd/MM/yyyy")</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-md text-info me-2"></i>
                                            <div>
                                                <strong>@item.Dentista?.Nome</strong>
                                                @if (item.Dentista != null)
                                                {
                                                    <br>
                                                    <small class="text-muted">CRO: @item.Dentista.Cro</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Observacao))
                                        {
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-sticky-note text-warning me-2"></i>
                                                <div>
                                                    <small class="text-muted">
                                                        @(item.Observacao.Length > 50 ?
                                                                                                    item.Observacao.Substring(0, 50) + "..." :
                                                                                                    item.Observacao)
                                        </small>
                                    </div>
                                </div>
                                                                }
                                        else
                                        {
                                            <small class="text-muted">
                                                <i class="fas fa-minus"></i> Sem observações
                                            </small>
                                        }

                                        @if (item.IdAgenda.HasValue)
                                        {
                                            <br>
                                            <span class="badge bg-secondary mt-1">
                                                <i class="fas fa-calendar-check"></i> Agenda #@item.IdAgenda
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-outline-info" title="Ver detalhes">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-outline-warning" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Resumo e Estatísticas -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="text-primary">@Model.Count()</h5>
                        <small class="text-muted">Total de Atendimentos</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="text-success">@Model.Where(a => a.DataAtendimento.Date == DateTime.Today).Count()</h5>
                        <small class="text-muted">Atendimentos Hoje</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="text-info">@Model.Sum(a => a.DuracaoAtendimento)</h5>
                        <small class="text-muted">Minutos Totais</small>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Nenhum atendimento encontrado</h4>
                <p class="text-muted">Comece registrando o primeiro atendimento no sistema.</p>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Registrar Primeiro Atendimento
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>

    <script>
        // Script para destacar atendimentos de hoje
        document.addEventListener('DOMContentLoaded', function() {
            const hoje = new Date().toLocaleDateString('pt-BR');
            const linhas = document.querySelectorAll('tbody tr');

            linhas.forEach(function(linha) {
                const dataCell = linha.querySelector('td:first-child strong');
                if (dataCell && dataCell.textContent === hoje) {
                    linha.classList.add('table-warning');
                    linha.setAttribute('title', 'Atendimento de hoje');
                }
            });
        });
    </script>
}
@{
    ViewData["Title"] = "Cadastrar Atendimento";
}
@model Pi_Odonto.ViewModels.AtendimentoViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="mb-0">
                        <i class="fas fa-calendar-plus"></i> Registrar Atendimento
                    </h2>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DataAtendimento" class="form-label fw-bold">
                                        <i class="fas fa-calendar text-primary"></i> Data do Atendimento <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="DataAtendimento" class="form-control" type="date" required />
                                    <span asp-validation-for="DataAtendimento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="HorarioAtendimento" class="form-label fw-bold">
                                        <i class="fas fa-clock text-primary"></i> Horário do Atendimento <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="HorarioAtendimento" class="form-control" type="time" required />
                                    <span asp-validation-for="HorarioAtendimento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DuracaoAtendimento" class="form-label fw-bold">
                                        <i class="fas fa-hourglass-half text-primary"></i> Duração (minutos) <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="DuracaoAtendimento" class="form-select" required>
                                        <option value="">Selecione a duração</option>
                                        <option value="15">15 minutos</option>
                                        <option value="30" selected>30 minutos</option>
                                        <option value="45">45 minutos</option>
                                        <option value="60">1 hora</option>
                                        <option value="90">1h 30min</option>
                                        <option value="120">2 horas</option>
                                    </select>
                                    <span asp-validation-for="DuracaoAtendimento" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="IdDentista" class="form-label fw-bold">
                                        <i class="fas fa-user-md text-primary"></i> Dentista <span class="text-danger">*</span>
                                    </label>

                                    @{
                                        bool isAdmin = Model.DentistasDisponiveis != null && Model.DentistasDisponiveis.Count > 1;
                                        var dentistaLogado = Model.DentistasDisponiveis?.FirstOrDefault();
                                    }

                                    @if (isAdmin)
                                    {
                                        <select asp-for="IdDentista" class="form-select" required>
                                            <option value="">Selecione um dentista</option>
                                            @if (Model.DentistasDisponiveis != null)
                                            {
                                                @foreach (var dentista in Model.DentistasDisponiveis)
                                                {
                                                    <option value="@dentista.Id" selected="@(dentista.Id == Model.IdDentista)">@dentista.Nome - CRO: @dentista.Cro</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="IdDentista" class="text-danger"></span>
                                    }
                                    else if (dentistaLogado != null)
                                    {
                                        <input type="text" 
                                               class="form-control" 
                                               value="@(dentistaLogado.Nome) - CRO: @(dentistaLogado.Cro)" 
                                               readonly />
                                        
                                        <input type="hidden" asp-for="IdDentista" value="@dentistaLogado.Id" />
                                        
                                        <span asp-validation-for="IdDentista" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning">Erro: Dentista não identificado.</div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="IdCrianca" class="form-label fw-bold">
                                        <i class="fas fa-child text-primary"></i> Criança <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="IdCrianca" class="form-select" id="selectCrianca" required>
                                        <option value="0">Selecione uma criança</option>
                                        @if (Model.CriancasDisponiveis != null)
                                        {
                                            @foreach (var crianca in Model.CriancasDisponiveis)
                                            {
                                                <option value="@crianca.Id">@crianca.Nome - @crianca.DataNascimento.ToString("dd/MM/yyyy")</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="IdCrianca" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Observacao" class="form-label fw-bold">
                                        <i class="fas fa-sticky-note text-primary"></i> Observações
                                    </label>
                                    <textarea asp-for="Observacao" class="form-control" rows="4"
                                              placeholder="Observações sobre o atendimento..." maxlength="100"></textarea>
                                    <span asp-validation-for="Observacao" class="text-danger"></span>
                                    <div class="form-text">Máximo de 100 caracteres. Informações complementares sobre o atendimento.</div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-success" id="odontogramaArea">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <i class="fas fa-tooth"></i>
                                    <strong>Odontograma:</strong> Selecione uma criança acima para acessar seu odontograma em uma nova aba.
                                </div>
                                <div id="odontogramaButtonContainer" style="display: none;">
                                    <a href="#" id="btnOdontograma" class="btn btn-info btn-sm" target="_blank">
                                        <i class="fas fa-tooth"></i> Ver Odontograma da Criança
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@ViewData["ReturnUrl"]" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar para Lista
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check-circle"></i> Salvar Atendimento
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Campos existentes
            const selectCrianca = document.getElementById('selectCrianca');
            const odontogramaButtonContainer = document.getElementById('odontogramaButtonContainer');
            const odontogramaArea = document.getElementById('odontogramaArea');
            const btnOdontograma = document.getElementById('btnOdontograma');
            const horarioInput = document.querySelector('input[name="HorarioAtendimento"]');
            const duracaoSelect = document.querySelector('select[name="DuracaoAtendimento"]');

            // NOVOS CAMPOS PARA ESCALA
            const dataInput = document.querySelector('input[name="DataAtendimento"]');
            // Prioriza o Select (Admin) e se não existir, pega o Hidden (Dentista)
            const dentistaInput = document.querySelector('select[name="IdDentista"]') || document.querySelector('input[name="IdDentista"][type="hidden"]');
            const dentistaReadonly = document.querySelector('input[readonly][value*="CRO"]'); // Campo de texto para o nome do dentista

            // Funções auxiliares para exibir a mensagem de erro (melhora a UX)
            function showValidationMessage(inputElement, message) {
                let span = inputElement.nextElementSibling;
                // Busca o span de validação existente ou cria um novo
                if (!span || !span.classList.contains('text-danger')) {
                    span = document.createElement('span');
                    span.classList.add('text-danger');
                    // Insere após o input
                    inputElement.parentNode.insertBefore(span, inputElement.nextSibling);
                }
                span.textContent = message;
            }

            function removeValidationMessage(inputElement) {
                let span = inputElement.nextElementSibling;
                if (span && span.classList.contains('text-danger')) {
                    span.textContent = '';
                }
            }
            
            // ==========================================================
            // FUNÇÃO DE CHECAGEM DE ESCALA (AJAX)
            // ==========================================================
            function checkEscala() {
                const idDentista = dentistaInput.value;
                const dataAtendimento = dataInput.value;
                
                // Limpa a validação anterior antes de checar
                removeValidationMessage(dataInput);
                
                if (!idDentista || idDentista === '0' || !dataAtendimento) {
                    dataInput.setCustomValidity(''); // Libera se os campos estiverem incompletos
                    return; 
                }

                // Chamar o endpoint no Controller
                fetch(`/Atendimento/CheckEscala?idDentista=${idDentista}&dataAtendimento=${dataAtendimento}`)
                    .then(response => response.json())
                    .then(data => {
                        if (!data.success) {
                            // Restrição de escala: Exibe mensagem e bloqueia o formulário
                            const errorMessage = data.message || "Esta data não está na escala de trabalho do dentista.";
                            showValidationMessage(dataInput, errorMessage);
                            dataInput.setCustomValidity(errorMessage); // Bloqueia o submit
                        } else {
                            // Data e escala válidas: Libera o formulário
                            dataInput.setCustomValidity('');
                        }
                    })
                    .catch(error => {
                        console.error('Erro ao verificar a escala:', error);
                        // Em caso de erro de rede/servidor, libera o formulário para não bloquear indefinidamente.
                        dataInput.setCustomValidity(''); 
                    });
            }

            // ==========================================================
            // LISTENERS DE EVENTOS
            // ==========================================================
            
            // 1. Checagem de Escala na alteração da Data ou Dentista
            dataInput.addEventListener('change', checkEscala);
            dentistaInput.addEventListener('change', checkEscala);
            
            // 2. Comportamento do botão Odontograma
            selectCrianca.addEventListener('change', function() {
                const criancaId = this.value;

                if (criancaId && criancaId !== '0') {
                    btnOdontograma.href = `/Odontograma/PorCrianca/${criancaId}`;
                    odontogramaButtonContainer.style.display = 'block';
                    odontogramaArea.classList.add('alert-info');
                    odontogramaArea.classList.remove('alert-success');
                } else {
                    odontogramaButtonContainer.style.display = 'none';
                    odontogramaArea.classList.remove('alert-info');
                    odontogramaArea.classList.add('alert-success');
                }
            });

            // Dispara a checagem de escala e odontograma na carga da página, caso já haja valores (ex: após erro de validação)
            selectCrianca.dispatchEvent(new Event('change'));
            if (dataInput.value && dentistaInput.value && dentistaInput.value !== '0') {
                checkEscala();
            }

            // ... (Restante dos scripts de cálculo de término e efeitos visuais) ...
            
            function calcularHorarioTermino() {
                if (horarioInput.value && duracaoSelect.value) {
                    const [horas, minutos] = horarioInput.value.split(':');
                    const inicio = new Date();
                    inicio.setHours(parseInt(horas), parseInt(minutos), 0, 0);

                    const duracao = parseInt(duracaoSelect.value);
                    const termino = new Date(inicio.getTime() + (duracao * 60000));

                    const horaTermino = termino.getHours().toString().padStart(2, '0');
                    const minutoTermino = termino.getMinutes().toString().padStart(2, '0');

                    console.log(`Atendimento termina às: ${horaTermino}:${minutoTermino}`);
                }
            }

            horarioInput.addEventListener('change', calcularHorarioTermino);
            duracaoSelect.addEventListener('change', calcularHorarioTermino);

            btnOdontograma.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.05)';
                this.style.transition = 'transform 0.2s';
            });

            btnOdontograma.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
            });
        });
    </script>

    <style>
        #odontogramaButtonContainer {
            animation: slideIn 0.3s ease-out;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(20px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        #btnOdontograma {
            transition: all 0.3s ease;
            white-space: nowrap;
        }

            #btnOdontograma:hover {
                box-shadow: 0 4px 8px rgba(23, 162, 184, 0.4);
            }

        #odontogramaArea {
            transition: all 0.3s ease;
        }

            #odontogramaArea.alert-info {
                border-left: 5px solid #17a2b8;
            }
    </style>
}
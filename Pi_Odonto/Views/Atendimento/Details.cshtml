@model Pi_Odonto.Models.Atendimento

@{
    ViewData["Title"] = "Detalhes do Atendimento";
    // Define a rota de retorno padrão para o listagem principal de Atendimento
    var returnUrl = ViewData["ReturnUrl"]?.ToString() ?? "/Atendimento";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-eye"></i> Detalhes do Atendimento
                    </h3>
                    <div class="card-tools">
                        @* BOTÃO "VOLTAR" (TOPO) - USANDO A ROTA DINÂMICA *@
                        <a href="@returnUrl" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Voltar
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-info-circle"></i> Informações do Atendimento
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            <i class="fas fa-calendar"></i> Data:
                                        </dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-info fs-6">
                                                @Model.DataAtendimento.ToString("dd/MM/yyyy")
                                            </span>
                                        </dd>

                                        <dt class="col-sm-4">
                                            <i class="fas fa-clock"></i> Horário:
                                        </dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-success fs-6">
                                                @Model.HorarioAtendimento.ToString(@"hh\:mm")
                                            </span>
                                        </dd>

                                        <dt class="col-sm-4">
                                            <i class="fas fa-hourglass-half"></i> Duração:
                                        </dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-warning text-dark fs-6">
                                                @Model.DuracaoAtendimento minutos
                                            </span>
                                        </dd>

                                        <dt class="col-sm-4">
                                            <i class="fas fa-time"></i> Período:
                                        </dt>
                                        <dd class="col-sm-8">
                                            <small class="text-muted">
                                                @Model.HorarioAtendimento.ToString(@"hh\:mm") às
                                                @Model.HorarioAtendimento.Add(TimeSpan.FromMinutes(Model.DuracaoAtendimento)).ToString(@"hh\:mm")
                                            </small>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-header bg-success text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-users"></i> Paciente e Dentista
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            <i class="fas fa-child"></i> Criança:
                                        </dt>
                                        <dd class="col-sm-8">
                                            <strong>@Model.Crianca?.Nome</strong>
                                            @if (Model.Crianca != null)
                                            {
                                                <br>
                                                <small class="text-muted">
                                                    Nascimento: @Model.Crianca.DataNascimento.ToString("dd/MM/yyyy")
                                                </small>
                                            }
                                        </dd>

                                        <dt class="col-sm-4">
                                            <i class="fas fa-user-md"></i> Dentista:
                                        </dt>
                                        <dd class="col-sm-8">
                                            <strong>@Model.Dentista?.Nome</strong>
                                            @if (Model.Dentista != null)
                                            {
                                                <br>
                                                <small class="text-muted">
                                                    CRO: @Model.Dentista.Cro
                                                </small>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Observacao))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card border-info">
                                    <div class="card-header bg-info text-white">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-sticky-note"></i> Observações
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="p-3 bg-light rounded">
                                            <p class="mb-0">@Model.Observacao</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card border-secondary">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0 text-dark">
                                        <i class="fas fa-link"></i> Relacionamentos e Vínculos
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <dl class="row">
                                                <dt class="col-sm-4">ID Atendimento:</dt>
                                                <dd class="col-sm-8">
                                                    <span class="badge bg-dark">#@Model.Id</span>
                                                </dd>

                                                <dt class="col-sm-4">ID Criança:</dt>
                                                <dd class="col-sm-8">
                                                    <span class="badge bg-primary">#@Model.IdCrianca</span>
                                                </dd>

                                                <dt class="col-sm-4">ID Dentista:</dt>
                                                <dd class="col-sm-8">
                                                    <span class="badge bg-success">#@Model.IdDentista</span>
                                                </dd>
                                            </dl>
                                        </div>
                                        <div class="col-md-6">
                                            <dl class="row">
                                                @* REMOVIDO: Seção "Agenda" removida conforme solicitado. *@
                                                
                                                <dt class="col-sm-4">Odontograma:</dt>
                                                <dd class="col-sm-8">
                                                    @* ATUALIZADO: Transformado em link para o Odontograma da Criança *@
                                                    <a href="/Odontograma/PorCrianca/@Model.IdCrianca" class="btn btn-sm btn-outline-warning text-dark p-0 px-1" role="button">
                                                        <i class="fas fa-external-link-alt"></i> Redirecionar para Odontograma
                                                    </a>
                                                    @if (Model.IdOdontograma.HasValue)
                                                    {
                                                        <small class="text-muted d-block mt-1">
                                                            Vínculo ID: #@Model.IdOdontograma
                                                        </small>
                                                    }
                                                </dd>
                                            </dl>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-end"> 
                                @* O BOTÃO "Voltar para Lista" FOI REMOVIDO DAQUI *@
                                <div>
                                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> Excluir
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
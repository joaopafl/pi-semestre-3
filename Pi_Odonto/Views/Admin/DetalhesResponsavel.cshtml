@model Pi_Odonto.Models.Responsavel
@{
    ViewData["Title"] = "Detalhes do Responsável";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="text-primary">
                <i class="fas fa-user-circle"></i> Detalhes do Responsável
            </h1>
            <p class="text-muted">Informações completas e crianças cadastradas</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="/Admin/Responsaveis" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>
            <a href="/Admin/Responsaveis/Editar/@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Dados do Responsável -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user"></i> Informações Pessoais
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Nome Completo:</label>
                                <div class="fw-bold">@Model.Nome</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Email:</label>
                                <div>
                                    <a href="mailto:@Model.Email" class="text-decoration-none">
                                        <i class="fas fa-envelope me-1"></i> @Model.Email
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">CPF:</label>
                                <div class="fw-bold">
                                    @if (Model.Cpf.Length == 11)
                                    {
                                        @($"{Model.Cpf.Substring(0, 3)}.{Model.Cpf.Substring(3, 3)}.{Model.Cpf.Substring(6, 3)}-{Model.Cpf.Substring(9, 2)}")
                                    }
                                    else
                                    {
                                        @Model.Cpf
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Telefone:</label>
                                <div>
                                    @if (Model.Telefone.Length == 11)
                                    {
                                        <a href="tel:@Model.Telefone" class="text-decoration-none">
                                            <i class="fas fa-phone me-1"></i>
                                            @($"({Model.Telefone.Substring(0, 2)}) {Model.Telefone.Substring(2, 5)}-{Model.Telefone.Substring(7, 4)}")
                                        </a>
                                    }
                                    else
                                    {
                                        <i class="fas fa-phone me-1"></i> 
                                        @Model.Telefone
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label text-muted">Endereço:</label>
                                <div>
                                    <i class="fas fa-map-marker-alt me-1"></i> @Model.Endereco
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Data de Cadastro:</label>
                                <div>
                                    <i class="fas fa-calendar me-1"></i> @Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Status:</label>
                                <div>
                                    @if (Model.Ativo)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check"></i> Ativo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="fas fa-times"></i> Inativo
                                        </span>
                                    }

                                    @if (Model.EmailVerificado)
                                    {
                                        <span class="badge bg-info fs-6 ms-2">
                                            <i class="fas fa-envelope-circle-check"></i> Email Verificado
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning fs-6 ms-2">
                                            <i class="fas fa-envelope"></i> Email Não Verificado
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Resumo -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-bar"></i> Resumo
                    </h6>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <h3 class="text-primary">@(Model.Criancas?.Count ?? 0)</h3>
                        <small class="text-muted">Criança(s) Cadastrada(s)</small>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-success">ID: #@Model.Id</h6>
                        <small class="text-muted">Identificador no Sistema</small>
                    </div>

                    <hr>

                    <div class="d-grid gap-2">
                        <form method="post" action="/Admin/Responsaveis/ToggleStatus/@Model.Id" class="d-inline">
                            <button type="submit" class="btn @(Model.Ativo ? "btn-outline-warning" : "btn-outline-success") btn-sm w-100"
                                    onclick="return confirm('@(Model.Ativo ? "Desativar" : "Ativar") este responsável?')">
                                <i class="fas @(Model.Ativo ? "fa-ban" : "fa-check")"></i>
                                @(Model.Ativo ? "Desativar" : "Ativar")
                            </button>
                        </form>

                        <form method="post" action="/Admin/Responsaveis/Excluir/@Model.Id" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100"
                                    onclick="return confirm('ATENÇÃO: Isso excluirá permanentemente o responsável E todas as suas crianças! Deseja continuar?')">
                                <i class="fas fa-trash"></i> Excluir
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Crianças -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-children"></i> Crianças Cadastradas
                        <span class="badge bg-light text-dark">@(Model.Criancas?.Count ?? 0)</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Criancas != null && Model.Criancas.Any())
                    {
                        <div class="row">
                            @foreach (var crianca in Model.Criancas)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card border-success">
                                        <div class="card-body">
                                            <h6 class="card-title text-success">
                                                <i class="fas fa-child"></i> @crianca.Nome
                                            </h6>

                                            <div class="small text-muted mb-2">
                                                <strong>Parentesco:</strong> @crianca.Parentesco
                                            </div>

                                            <div class="small text-muted mb-2">
                                                <strong>Data de Nascimento:</strong> @crianca.DataNascimento.ToString("dd/MM/yyyy")
                                                <span class="badge bg-info ms-1">
                                                    @(DateTime.Now.Year - crianca.DataNascimento.Year) anos
                                                </span>
                                            </div>

                                            <div class="small text-muted">
                                                <strong>CPF:</strong>
                                                @if (crianca.Cpf.Length == 11)
                                                {
                                                    @($"{crianca.Cpf.Substring(0, 3)}.{crianca.Cpf.Substring(3, 3)}.{crianca.Cpf.Substring(6, 3)}-{crianca.Cpf.Substring(9, 2)}")
                                                }
                                                else
                                                {
                                                    @crianca.Cpf
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-child fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Nenhuma criança cadastrada</h5>
                            <p class="text-muted">Este responsável ainda não possui crianças vinculadas.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}
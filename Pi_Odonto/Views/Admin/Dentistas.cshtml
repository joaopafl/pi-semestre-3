@{
    ViewData["Title"] = "Lista de Dentistas";
}
@model IEnumerable<Pi_Odonto.Models.Dentista>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="text-primary">
                <i class="fas fa-user-md"></i> Lista de Dentistas
            </h1>
            <p class="text-muted">Gerenciar dentistas cadastrados no sistema</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group">
                <a href="@Url.Action("CriarDentista")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Novo Dentista
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-times-circle"></i> @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros de Busca</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Dentistas">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Buscar por Nome, Email, CPF, Telefone ou CRO:</label>
                        <input type="text" name="busca" class="form-control" value="@ViewBag.Busca" placeholder="Digite para buscar...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Status:</label>
                        <select name="ativo" class="form-control">
                            <option value="">Todos</option>
                            @if (ViewBag.Ativo != null && ViewBag.Ativo.ToString() == "True")
                            {
                                <option value="true" selected>Apenas Ativos</option>
                                <option value="false">Apenas Inativos</option>
                            }
                            else if (ViewBag.Ativo != null && ViewBag.Ativo.ToString() == "False")
                            {
                                <option value="true">Apenas Ativos</option>
                                <option value="false" selected>Apenas Inativos</option>
                            }
                            else
                            {
                                <option value="true">Apenas Ativos</option>
                                <option value="false">Apenas Inativos</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Situação:</label>
                        <select name="situacao" class="form-control">
                            <option value="">Todas</option>
                            @if (ViewBag.Situacao?.ToString() == "candidato")
                            {
                                <option value="candidato" selected>Candidato</option>
                                <option value="contratado">Contratado</option>
                                <option value="banco de talento">Banco de Talento</option>
                                <option value="desvinculado">Desvinculado</option>
                            }
                            else if (ViewBag.Situacao?.ToString() == "contratado")
                            {
                                <option value="candidato">Candidato</option>
                                <option value="contratado" selected>Contratado</option>
                                <option value="banco de talento">Banco de Talento</option>
                                <option value="desvinculado">Desvinculado</option>
                            }
                            else if (ViewBag.Situacao?.ToString() == "banco de talento")
                            {
                                <option value="candidato">Candidato</option>
                                <option value="contratado">Contratado</option>
                                <option value="banco de talento" selected>Banco de Talento</option>
                                <option value="desvinculado">Desvinculado</option>
                            }
                            else if (ViewBag.Situacao?.ToString() == "desvinculado")
                            {
                                <option value="candidato">Candidato</option>
                                <option value="contratado">Contratado</option>
                                <option value="banco de talento">Banco de Talento</option>
                                <option value="desvinculado" selected>Desvinculado</option>
                            }
                            else
                            {
                                <option value="candidato">Candidato</option>
                                <option value="contratado">Contratado</option>
                                <option value="banco de talento">Banco de Talento</option>
                                <option value="desvinculado">Desvinculado</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2 w-100">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12">
                        <a href="/Admin/Dentistas" class="btn btn-outline-secondary">
                            <i class="fas fa-undo"></i> Limpar Filtros
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-list"></i> Dentistas Cadastrados
                    <span class="badge bg-light text-dark">@Model.Count()</span>
                </h5>
                <div>
                    <button class="btn btn-light btn-sm" onclick="window.print()">
                        <i class="fas fa-print"></i> Imprimir
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>CPF</th>
                                <th>CRO</th>
                                <th>Telefone</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Situação</th>
                                <th width="250">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dentista in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-md text-primary me-2"></i>
                                            <strong>@dentista.Nome</strong>
                                        </div>
                                    </td>
                                    <td>
                                        @if (dentista.Cpf.Length == 11)
                                        {
                                            @($"{dentista.Cpf.Substring(0, 3)}.{dentista.Cpf.Substring(3, 3)}.{dentista.Cpf.Substring(6, 3)}-{dentista.Cpf.Substring(9, 2)}")
                                        }
                                        else
                                        {
                                            @dentista.Cpf
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@dentista.Cro</span>
                                    </td>
                                    <td>
                                        @if (dentista.Telefone.Length == 11)
                                        {
                                            <a href="tel:@dentista.Telefone" class="text-decoration-none">
                                                @($"({dentista.Telefone.Substring(0, 2)}) {dentista.Telefone.Substring(2, 5)}-{dentista.Telefone.Substring(7, 4)}")
                                            </a>
                                        }
                                        else
                                        {
                                            @dentista.Telefone
                                        }
                                    </td>
                                    <td>
                                        <a href="mailto:@dentista.Email" class="text-decoration-none">
                                            @dentista.Email
                                        </a>
                                    </td>
                                    <td>
                                        @if (dentista.Ativo)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> Ativo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-ban"></i> Inativo
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var situacao = dentista.Situacao ?? "candidato";
                                            var situacaoClass = situacao.ToLower() switch
                                            {
                                                "contratado" => "bg-success",
                                                "banco de talento" => "bg-info",
                                                "desvinculado" => "bg-secondary",
                                                _ => "bg-warning"
                                            };
                                        }
                                        <span class="badge @situacaoClass">
                                            @situacao
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("DetalhesDentista", new { id = dentista.Id })" class="btn btn-outline-info" title="Ver detalhes">
                                                <i class="fas fa-eye"></i> Detalhes
                                            </a>
                                            <a href="@Url.Action("EditarDentista", new { id = dentista.Id })" class="btn btn-outline-warning" title="Editar">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <form method="post" asp-action="ToggleAtivoDentista" asp-route-id="@dentista.Id" class="d-inline js-action-form">
                                                @Html.AntiForgeryToken()
                                                <button type="button" 
                                                        class="btn btn-sm @(dentista.Ativo ? "btn-outline-danger" : "btn-outline-success") js-confirm-action"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#confirmActionModal"
                                                        data-action-url="/Admin/ToggleAtivoDentista/@dentista.Id" 
                                                        data-message="Tem certeza que deseja @(dentista.Ativo ? "DESATIVAR" : "ATIVAR") o dentista @dentista.Nome?"
                                                        data-header-class="@(dentista.Ativo ? "bg-warning" : "bg-success")"
                                                        data-confirm-text="@(dentista.Ativo ? "Sim, Desativar" : "Sim, Ativar")"
                                                        data-is-danger="false"
                                                        title="@(dentista.Ativo ? "Desativar" : "Ativar")">
                                                    <i class="fas fa-@(dentista.Ativo ? "ban" : "check")"></i> @(dentista.Ativo ? "Desativar" : "Ativar")
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h5 class="text-primary">@Model.Count()</h5>
                                <small class="text-muted">Total Exibido</small>
                            </div>
                            <div class="col-md-3">
                                <h5 class="text-success">@Model.Where(d => d.Ativo).Count()</h5>
                                <small class="text-muted">Ativos</small>
                            </div>
                            <div class="col-md-3">
                                <h5 class="text-danger">@Model.Where(d => !d.Ativo).Count()</h5>
                                <small class="text-muted">Inativos</small>
                            </div>
                            <div class="col-md-3">
                                <h5 class="text-info">@Model.Where(d => d.Situacao == "candidato").Count()</h5>
                                <small class="text-muted">Candidatos</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-user-md fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Nenhum dentista encontrado</h4>
                @if (!string.IsNullOrEmpty(ViewBag.Busca?.ToString()) || ViewBag.Ativo != null || !string.IsNullOrEmpty(ViewBag.Situacao?.ToString()))
                {
                    <p class="text-muted">Sua busca não retornou resultados.</p>
                    <a href="/Admin/Dentistas" class="btn btn-primary">
                        <i class="fas fa-undo"></i> Ver Todos
                    </a>
                }
                else
                {
                    <p class="text-muted">Comece cadastrando o primeiro dentista no sistema.</p>
                    <a href="@Url.Action("CriarDentista")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Cadastrar Primeiro Dentista
                    </a>
                }
            </div>
        </div>
    }
</div>

<div class="modal fade" id="confirmActionModal" tabindex="-1" aria-labelledby="confirmActionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white" id="modalHeader">
                <h5 class="modal-title" id="confirmActionModalLabel">Confirmação Necessária</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="modalMessage" class="lead text-center">Tem certeza que deseja realizar esta ação?</p>
                <div class="alert alert-warning mt-3" id="modalWarning" style="display:none;">
                    <i class="fas fa-exclamation-triangle"></i> Esta ação é permanente e não pode ser desfeita!
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <button type="button" class="btn btn-danger" id="confirmActionButton">
                    <i class="fas fa-check"></i> Confirmar
                </button>
                <form method="post" id="actionForm" style="display: none;"></form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        // Auto-submit do form de busca após digitar
        let searchTimer;
        const buscaInput = document.querySelector('input[name="busca"]');
        if (buscaInput) {
            buscaInput.addEventListener('input', function() {
                clearTimeout(searchTimer);
                searchTimer = setTimeout(() => {
                    this.form.submit();
                }, 500);
            });
        }

        // Lógica para Modais de Confirmação Amigáveis
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializa o modal do Bootstrap
            const confirmActionModalElement = document.getElementById('confirmActionModal');
            
            const confirmActionButton = document.getElementById('confirmActionButton');
            const actionForm = document.getElementById('actionForm');

            // Event listener para abrir o modal
            document.querySelectorAll('.js-confirm-action').forEach(button => {
                button.addEventListener('click', function (event) {
                    
                    // Captura os dados customizados dos atributos data-
                    const actionUrl = this.getAttribute('data-action-url');
                    const message = this.getAttribute('data-message');
                    const headerClass = this.getAttribute('data-header-class') || 'bg-danger';
                    const confirmText = this.getAttribute('data-confirm-text') || 'Confirmar';
                    // IMPORTANTE: Mantenha o data-is-danger como 'false' para desativação/ativação
                    const isDanger = this.getAttribute('data-is-danger') === 'true'; 

                    // Pega o form original para copiar tokens de anti-forgery
                    const originalForm = this.closest('.js-action-form');
                    
                    // 1. Atualiza o conteúdo do modal
                    document.getElementById('modalMessage').innerHTML = message;

                    // 2. Atualiza o cabeçalho e cor do botão
                    const modalHeader = document.getElementById('modalHeader');
                    modalHeader.className = `modal-header text-white ${headerClass}`;

                    // Ajusta a cor do botão de ação
                    confirmActionButton.className = `btn ${isDanger ? 'btn-danger' : 'btn-primary'}`;
                    confirmActionButton.innerHTML = `<i class="fas fa-check"></i> ${confirmText}`;

                    // 3. Exibe/Oculta o alerta de perigo (NUNCA deve aparecer para Toggle Status, por isso mantive `isDanger` no modal, mas garantimos que o data-is-danger seja false acima)
                    document.getElementById('modalWarning').style.display = isDanger ? 'block' : 'none';

                    // 4. Configura o formulário oculto
                    actionForm.action = actionUrl;
                    actionForm.innerHTML = ''; // Limpa o form

                    // 5. Copia o token de anti-forgery (muito importante para POST)
                    const antiForgeryToken = originalForm.querySelector('input[name="__RequestVerificationToken"]');
                    if (antiForgeryToken) {
                        actionForm.appendChild(antiForgeryToken.cloneNode(true));
                    }
                });
            });


            // Listener para o clique no botão de CONFIRMAR do modal
            confirmActionButton.addEventListener('click', function() {
                // Envia o formulário oculto com a URL e token corretos
                actionForm.submit();
                // Não é necessário esconder o modal, o submit fará o refresh
            });
        });
    </script>
}
@{
    ViewData["Title"] = "Gerenciar Responsáveis";
}
@model List<Pi_Odonto.Models.Responsavel>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="text-primary">
                <i class="fas fa-users"></i> Gerenciar Responsáveis
            </h1>
            <p class="text-muted">Lista completa de responsáveis cadastrados no sistema</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="/Admin/Dashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Voltar ao Dashboard
            </a>
        </div>
    </div>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-times-circle"></i> @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }


    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros de Busca</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Responsaveis">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Buscar por Nome, Email, CPF ou Telefone:</label>
                        <input type="text" name="busca" class="form-control" value="@ViewBag.Busca" placeholder="Digite para buscar...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Status:</label>
                        <select name="ativo" class="form-control">
                            <option value="">Todos</option>
                            @if (ViewBag.Ativo != null && ViewBag.Ativo.ToString() == "True")
                            {
                                <option value="true" selected>Apenas Ativos</option>
                                <option value="false">Apenas Inativos</option>
                            }
                            else if (ViewBag.Ativo != null && ViewBag.Ativo.ToString() == "False")
                            {
                                <option value="true">Apenas Ativos</option>
                                <option value="false" selected>Apenas Inativos</option>
                            }
                            else
                            {
                                <option value="true">Apenas Ativos</option>
                                <option value="false">Apenas Inativos</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                        <a href="/Admin/Responsaveis" class="btn btn-outline-secondary">
                            <i class="fas fa-undo"></i> Limpar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-4 mb-4 border-0 shadow-sm">
        <div class="card-header bg-light">
            <h6 class="mb-0 text-primary"><i class="fas fa-info-circle"></i> Guia de Ícones de Ação</h6>
        </div>
        <div class="card-body py-2">
            <div class="d-flex flex-wrap align-items-center">
                <div class="mb-2 me-4">
                    <i class="fas fa-eye text-info me-1"></i> Detalhes do Responsavel
                </div>
                <div class="mb-2 me-4">
                    <i class="fas fa-edit text-warning me-1"></i> Editar Cadastro
                </div>
                <div class="mb-2 me-4">
                    <i class="fas fa-check text-success me-1"></i> Ativar Responsavel  
                </div>
                <div class="mb-2 me-4">
                    <i class="fas fa-ban text-danger me-1"></i> Desativar Responsavel  
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> Responsáveis Cadastrados
                <span class="badge bg-light text-dark">@(Model?.Count() ?? 0)</span>
            </h5>
            <div>
                <button class="btn btn-light btn-sm" onclick="window.print()">
                    <i class="fas fa-print"></i> Imprimir
                </button>
                <a href="/Responsavel/Create" class="btn btn-success btn-sm">
                    <i class="fas fa-plus"></i> Novo Cadastro
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th>CPF</th>
                                <th>Crianças</th>
                                <th>Status</th>
                                <th width="150">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var responsavel in Model)
                            {
                                <tr>
                                    <td class="fw-bold text-primary">#@responsavel.Id</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user text-muted me-2"></i>
                                            <div>
                                                <div class="fw-semibold">@responsavel.Nome</div>
                                                @if (!string.IsNullOrEmpty(responsavel.Endereco))
                                                {
                                                    var enderecoLimitado = responsavel.Endereco.Length > 30 ? responsavel.Endereco.Substring(0, 30) + "..." : responsavel.Endereco;
                                                    <small class="text-muted">@enderecoLimitado</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <a href="mailto:@responsavel.Email" class="text-decoration-none">
                                            @responsavel.Email
                                        </a>
                                    </td>
                                    <td>
                                        @if (responsavel.Telefone?.Length == 11)
                                        {
                                            <a href="tel:@responsavel.Telefone" class="text-decoration-none">
                                                @($"({responsavel.Telefone.Substring(0, 2)}) {responsavel.Telefone.Substring(2, 5)}-{responsavel.Telefone.Substring(7, 4)}")
                                            </a>
                                        }
                                        else
                                        {
                                            @responsavel.Telefone
                                        }
                                    </td>
                                    <td>
                                        @if (responsavel.Cpf?.Length == 11)
                                        {
                                            @($"{responsavel.Cpf.Substring(0, 3)}.{responsavel.Cpf.Substring(3, 3)}.{responsavel.Cpf.Substring(6, 3)}-{responsavel.Cpf.Substring(9, 2)}")
                                        }
                                        else
                                        {
                                            @responsavel.Cpf
                                        }
                                    </td>
                                    <td>
                                        @if (responsavel.Criancas != null && responsavel.Criancas.Any())
                                        {
                                            <span class="badge bg-info">@responsavel.Criancas.Count</span>
                                            <small class="text-muted d-block">
                                                @string.Join(", ", responsavel.Criancas.Take(2).Select(c => c.Nome))
                                                @if (responsavel.Criancas.Count > 2)
                                                {
                                                    <text>...</text>
                                                }
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">0</span>
                                        }
                                    </td>
                                    <td>
                                        @if (responsavel.Ativo)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Ativo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Inativo
                                            </span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <div class="d-flex justify-content-start">
                                            
                                            <a href="/Admin/Responsaveis/Detalhes/@responsavel.Id" class="btn btn-outline-info btn-sm me-1" title="Ver detalhes">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            
                                            <a href="/Admin/Responsaveis/Editar/@responsavel.Id" class="btn btn-outline-warning btn-sm me-1" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            
                                            <form method="post" asp-action="ToggleStatus" asp-route-id="@responsavel.Id" class="d-inline js-action-form">
                                                @Html.AntiForgeryToken()
                                                <button type="button" 
                                                        class="btn btn-sm @(responsavel.Ativo ? "btn-outline-danger" : "btn-outline-success") js-confirm-action"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#confirmActionModal"
                                                        data-action-url="/Admin/Responsaveis/ToggleStatus/@responsavel.Id" 
                                                        data-message="Tem certeza que deseja @(responsavel.Ativo ? "DESATIVAR" : "ATIVAR") o responsável <strong>@responsavel.Nome</strong>?"
                                                        data-header-class="@(responsavel.Ativo ? "bg-warning" : "bg-success")"
                                                        data-confirm-text="@(responsavel.Ativo ? "Sim, Desativar" : "Sim, Ativar")"
                                                        data-is-danger="false"
                                                        title="@(responsavel.Ativo ? "Desativar" : "Ativar")">
                                                    
                                                    <i class="fas fa-@(responsavel.Ativo ? "ban" : "check")"></i> 
                                                </button>
                                            </form>
                                            
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Nenhum responsável encontrado</h4>
                    @if (!string.IsNullOrEmpty(ViewBag.Busca?.ToString()))
                    {
                        <p class="text-muted">Sua busca por "@ViewBag.Busca" não retornou resultados.</p>
                        <a href="/Admin/Responsaveis" class="btn btn-primary">
                            <i class="fas fa-undo"></i> Ver Todos
                        </a>
                    }
                    else
                    {
                        <p class="text-muted">Ainda não há responsáveis cadastrados no sistema.</p>
                        <a href="/Responsavel/Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Fazer Primeiro Cadastro
                        </a>
                    }
                </div>
            }
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card mt-4 mb-4 border-0 shadow-sm">
            <div class="card-header bg-light">
                <h6 class="mb-0 text-primary"><i class="fas fa-info-circle"></i> Guia de Ícones de Ação</h6>
            </div>
            <div class="card-body py-2">
                <div class="d-flex flex-wrap align-items-center">
                    <div class="mb-2 me-4">
                        <i class="fas fa-eye text-info me-1"></i> Detalhes do Responsável
                    </div>
                    <div class="mb-2 me-4">
                        <i class="fas fa-edit text-warning me-1"></i> Editar Cadastro
                    </div>
                    <div class="mb-2 me-4">
                        <i class="fas fa-check text-success me-1"></i> Ativar Responsável (Se Inativo)
                    </div>
                    <div class="mb-2 me-4">
                        <i class="fas fa-ban text-danger me-1"></i> Desativar Responsável (Se Ativo)
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h5 class="text-primary">@(Model?.Count() ?? 0)</h5>
                                <small class="text-muted">Total Exibido</small>
                            </div>
                            <div class="col-md-3">
                                <h5 class="text-success">@(Model?.Where(r => r.Ativo).Count() ?? 0)</h5>
                                <small class="text-muted">Ativos</small>
                            </div>
                            <div class="col-md-3">
                                <h5 class="text-danger">@(Model?.Where(r => !r.Ativo).Count() ?? 0)</h5>
                                <small class="text-muted">Inativos</small>
                            </div>
                            <div class="col-md-3">
                                @if (Model.Any(r => r.DataCadastro != default(DateTime)))
                                {
                                    <h5 class="text-info">@(Model?.Where(r => r.DataCadastro.Date == DateTime.Today).Count() ?? 0)</h5>
                                    <small class="text-muted">Cadastros Hoje</small>
                                }
                                else
                                {
                                    <h5 class="text-info">@(Model?.Sum(r => r.Criancas?.Count ?? 0) ?? 0)</h5>
                                    <small class="text-muted">Total Crianças</small>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="confirmActionModal" tabindex="-1" aria-labelledby="confirmActionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white" id="modalHeader">
                <h5 class="modal-title" id="confirmActionModalLabel">Confirmação Necessária</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="modalMessage" class="lead text-center">Tem certeza que deseja realizar esta ação?</p>
                <div class="alert alert-warning mt-3" id="modalWarning" style="display:none;">
                    <i class="fas fa-exclamation-triangle"></i> Esta ação é permanente e não pode ser desfeita!
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <button type="button" class="btn btn-danger" id="confirmActionButton">
                    <i class="fas fa-check"></i> Confirmar
                </button>
                <form method="post" id="actionForm" style="display: none;"></form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        // Auto-submit do form de busca após digitar
        let searchTimer;
        const buscaInput = document.querySelector('input[name="busca"]');
        if (buscaInput) {
            buscaInput.addEventListener('input', function() {
                clearTimeout(searchTimer);
                searchTimer = setTimeout(() => {
                    this.form.submit();
                }, 500);
            });
        }

        // Lógica para Modais de Confirmação Amigáveis
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializa o modal do Bootstrap
            const confirmActionModalElement = document.getElementById('confirmActionModal');
            
            const confirmActionButton = document.getElementById('confirmActionButton');
            const actionForm = document.getElementById('actionForm');

            // Event listener para abrir o modal
            document.querySelectorAll('.js-confirm-action').forEach(button => {
                button.addEventListener('click', function (event) {
                    
                    // Captura os dados customizados dos atributos data-
                    const actionUrl = this.getAttribute('data-action-url');
                    const message = this.getAttribute('data-message');
                    const headerClass = this.getAttribute('data-header-class') || 'bg-danger';
                    const confirmText = this.getAttribute('data-confirm-text') || 'Confirmar';
                    // IMPORTANTE: Mantenha o data-is-danger como 'false' para desativação/ativação
                    const isDanger = this.getAttribute('data-is-danger') === 'true'; 

                    // Pega o form original para copiar tokens de anti-forgery
                    const originalForm = this.closest('.js-action-form');
                    
                    // 1. Atualiza o conteúdo do modal
                    document.getElementById('modalMessage').innerHTML = message;

                    // 2. Atualiza o cabeçalho e cor do botão
                    const modalHeader = document.getElementById('modalHeader');
                    modalHeader.className = `modal-header text-white ${headerClass}`;

                    // Ajusta a cor do botão de ação
                    confirmActionButton.className = `btn ${isDanger ? 'btn-danger' : 'btn-primary'}`;
                    confirmActionButton.innerHTML = `<i class="fas fa-check"></i> ${confirmText}`;

                    // 3. Exibe/Oculta o alerta de perigo (NUNCA deve aparecer para Toggle Status, por isso mantive `isDanger` no modal, mas garantimos que o data-is-danger seja false acima)
                    document.getElementById('modalWarning').style.display = isDanger ? 'block' : 'none';

                    // 4. Configura o formulário oculto
                    actionForm.action = actionUrl;
                    actionForm.innerHTML = ''; // Limpa o form

                    // 5. Copia o token de anti-forgery (muito importante para POST)
                    const antiForgeryToken = originalForm.querySelector('input[name="__RequestVerificationToken"]');
                    if (antiForgeryToken) {
                        actionForm.appendChild(antiForgeryToken.cloneNode(true));
                    }
                });
            });


            // Listener para o clique no botão de CONFIRMAR do modal
            confirmActionButton.addEventListener('click', function() {
                // Envia o formulário oculto com a URL e token corretos
                actionForm.submit();
                // Não é necessário esconder o modal, o submit fará o refresh
            });
        });
    </script>
}
@{
    ViewData["Title"] = "Excluir Escala de Trabalho";
}
@model Pi_Odonto.Models.EscalaTrabalho

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h2 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirmar Exclusão
                    </h2>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Atenção!</strong> Você está prestes a excluir esta escala de trabalho. Esta ação não pode ser desfeita.
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <h4 class="text-primary mb-3">Detalhes da Escala de Trabalho:</h4>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="fas fa-hashtag"></i> ID:
                                </label>
                                <p class="form-control-plaintext border-bottom">
                                    <span class="badge bg-info fs-6">#@Model.IdEscala</span>
                                </p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="fas fa-calendar-day"></i> Dia da Semana:
                                </label>
                                <p class="form-control-plaintext border-bottom">
                                    <strong>@Model.DtDisponivel</strong>
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="fas fa-play"></i> Horário de Início:
                                </label>
                                <p class="form-control-plaintext border-bottom">
                                    <span class="badge bg-success fs-6">@Model.HrInicio:00</span>
                                </p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="fas fa-stop"></i> Horário de Fim:
                                </label>
                                <p class="form-control-plaintext border-bottom">
                                    <span class="badge bg-danger fs-6">@Model.HrFim:00</span>
                                </p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="fas fa-clock"></i> Duração:
                                </label>
                                <p class="form-control-plaintext border-bottom">
                                    @{
                                        var duracao = Model.HrFim - Model.HrInicio;
                                    }
                                    <span class="badge bg-info fs-6">@duracao horas</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("EscalaTrabalho")" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Cancelar
                        </a>
                        <form asp-action="DeleteEscalaConfirmed" method="post" style="display: inline;">
                            <input type="hidden" asp-for="IdEscala" />
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash"></i> Confirmar Exclusão
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}

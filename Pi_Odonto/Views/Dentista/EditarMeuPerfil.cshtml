@using Pi_Odonto.Controllers
@model EditarPerfilDentistaViewModel

@{
    ViewData["Title"] = "Editar Meu Perfil";
}

<style>
    .edit-header {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .form-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        padding: 30px;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 600;
        color: #4a5568;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
    }

        .form-label i {
            margin-right: 8px;
            color: #4a90e2;
        }

    .form-control {
        padding: 12px 15px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.1);
        }

    .readonly-field {
        background-color: #f7fafc;
        cursor: not-allowed;
    }

    .section-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 3px solid #4a90e2;
    }

    .alert-info-custom {
        background: #ebf8ff;
        border-left: 4px solid #4299e1;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .btn-save {
        background: linear-gradient(135deg, #48bb78, #38a169);
        border: none;
        padding: 12px 40px;
        font-weight: 600;
    }

        .btn-save:hover {
            background: linear-gradient(135deg, #38a169, #2f855a);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(72, 187, 120, 0.3);
        }
</style>

<div class="container mt-4">
    <!-- Header -->
    <div class="edit-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2><i class="fas fa-user-edit"></i> Editar Meu Perfil</h2>
                <p class="mb-0 opacity-75">Atualize suas informações pessoais</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="/Dentista/MeuPerfil" class="btn btn-outline-light">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="EditarMeuPerfil" method="post">
        <div class="row">
            <!-- Informações Pessoais -->
            <div class="col-md-6">
                <div class="form-card">
                    <h4 class="section-title">
                        <i class="fas fa-user"></i> Informações Pessoais
                    </h4>

                    <div class="form-group">
                        <label class="form-label" asp-for="Nome">
                            <i class="fas fa-user-circle"></i> Nome Completo
                        </label>
                        <input asp-for="Nome" class="form-control" placeholder="Digite seu nome completo" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="alert-info-custom">
                        <small>
                            <i class="fas fa-info-circle"></i>
                            <strong>Atenção:</strong> CPF e CRO não podem ser alterados por questões de segurança.
                        </small>
                    </div>
                </div>
            </div>

            <!-- Informações de Contato -->
            <div class="col-md-6">
                <div class="form-card">
                    <h4 class="section-title">
                        <i class="fas fa-address-book"></i> Informações de Contato
                    </h4>

                    <div class="form-group">
                        <label class="form-label" asp-for="Email">
                            <i class="fas fa-envelope"></i> Email
                        </label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="seu@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="Telefone">
                            <i class="fas fa-phone"></i> Telefone
                        </label>
                        <input asp-for="Telefone" class="form-control" placeholder="(00) 00000-0000" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="Endereco">
                            <i class="fas fa-map-marker-alt"></i> Endereço
                        </label>
                        <textarea asp-for="Endereco" class="form-control" rows="3" placeholder="Rua, número, bairro, cidade"></textarea>
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alterar Senha (Opcional) -->
        <div class="row">
            <div class="col-12">
                <div class="form-card">
                    <h4 class="section-title">
                        <i class="fas fa-lock"></i> Alterar Senha (Opcional)
                    </h4>

                    <div class="alert-info-custom">
                        <small>
                            <i class="fas fa-info-circle"></i>
                            Deixe em branco se não deseja alterar a senha.
                        </small>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="NovaSenha">
                                    <i class="fas fa-key"></i> Nova Senha
                                </label>
                                <input asp-for="NovaSenha" type="password" class="form-control" placeholder="Digite a nova senha" />
                                <span asp-validation-for="NovaSenha" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="ConfirmarSenha">
                                    <i class="fas fa-key"></i> Confirmar Nova Senha
                                </label>
                                <input asp-for="ConfirmarSenha" type="password" class="form-control" placeholder="Confirme a nova senha" />
                                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Botões de Ação -->
        <div class="text-center mb-4">
            <button type="submit" class="btn btn-success btn-lg btn-save">
                <i class="fas fa-save"></i> Salvar Alterações
            </button>
            <a href="/Dentista/MeuPerfil" class="btn btn-secondary btn-lg ms-3">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
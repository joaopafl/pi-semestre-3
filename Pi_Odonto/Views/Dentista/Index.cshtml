@{
    ViewData["Title"] = "Lista de Dentistas";
}
@model IEnumerable<Pi_Odonto.Models.Dentista>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="text-primary">
                <i class="fas fa-user-md"></i> Lista de Dentistas
            </h1>
            <p class="text-muted">Gerenciar dentistas cadastrados no sistema</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group">
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Novo Dentista
                </a>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-list"></i> Dentistas Cadastrados
                    <span class="badge bg-light text-dark">@Model.Count()</span>
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>CPF</th>
                                <th>CRO</th>
                                <th>Telefone</th>
                                <th>Email</th>
                                <th width="200">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dentista in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-md text-primary me-2"></i>
                                            <strong>@dentista.Nome</strong>
                                        </div>
                                    </td>
                                    <td>
                                        @if (dentista.Cpf.Length == 11)
                                        {
                                            @($"{dentista.Cpf.Substring(0, 3)}.{dentista.Cpf.Substring(3, 3)}.{dentista.Cpf.Substring(6, 3)}-{dentista.Cpf.Substring(9, 2)}")
                                        }
                                        else
                                        {
                                            @dentista.Cpf
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@dentista.Cro</span>
                                    </td>
                                    <td>
                                        @if (dentista.Telefone.Length == 11)
                                        {
                                            <a href="tel:@dentista.Telefone" class="text-decoration-none">
                                                @($"({dentista.Telefone.Substring(0, 2)}) {dentista.Telefone.Substring(2, 5)}-{dentista.Telefone.Substring(7, 4)}")
                                            </a>
                                        }
                                        else
                                        {
                                            @dentista.Telefone
                                        }
                                    </td>
                                    <td>
                                        <a href="mailto:@dentista.Email" class="text-decoration-none">
                                            @dentista.Email
                                        </a>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Details", new { id = dentista.Id })" class="btn btn-outline-info" title="Ver detalhes">
                                                <i class="fas fa-eye"></i> Detalhes
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = dentista.Id })" class="btn btn-outline-warning" title="Editar">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = dentista.Id })" class="btn btn-outline-danger" title="Excluir">
                                                <i class="fas fa-trash"></i> Excluir
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Resumo -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-12">
                                <h5 class="text-primary">@Model.Count()</h5>
                                <small class="text-muted">Total de Dentistas Cadastrados</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-user-md fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Nenhum dentista cadastrado</h4>
                <p class="text-muted">Comece cadastrando o primeiro dentista no sistema.</p>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Cadastrar Primeiro Dentista
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}

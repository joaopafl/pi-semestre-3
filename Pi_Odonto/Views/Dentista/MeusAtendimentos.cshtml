@model IEnumerable<Pi_Odonto.Models.Atendimento>

@{
    ViewData["Title"] = "Meus Atendimentos";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="text-primary">
                <i class="fas fa-clipboard-list"></i> Meus Atendimentos
            </h1>
            <p class="text-muted">Atendimentos que realizei</p>
        </div>
        <div class="col-md-6 text-end">
            <a href="/Atendimento/Create" class="btn btn-success me-2">
                <i class="fas fa-plus-circle"></i> Novo Atendimento
            </a>
            <a href="/Dentista/Dashboard" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar ao Dashboard
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-list"></i> Atendimentos Realizados
                    <span class="badge bg-light text-dark">@Model.Count()</span>
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Data</th>
                                <th>Horário/Duração</th>
                                <th>Criança</th>
                                <th>Observações</th>
                                <th width="150">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-calendar text-primary me-2"></i>
                                            <div>
                                                <strong>@item.DataAtendimento.ToString("dd/MM/yyyy")</strong>
                                                <br>
                                                <small class="text-muted">@item.DataAtendimento.ToString("dddd")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-clock text-info me-2"></i>
                                            <div>
                                                <strong>@item.HorarioAtendimento.ToString(@"hh\:mm")</strong>
                                                <br>
                                                <small class="text-muted">
                                                    @item.DuracaoAtendimento min
                                                </small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-child text-success me-2"></i>
                                            <div>
                                                <strong>@item.Crianca?.Nome</strong>
                                                @if (item.Crianca != null)
                                                {
                                                    <br>
                                                    <small class="text-muted">
                                                        @((DateTime.Now.Year - item.Crianca.DataNascimento.Year)) anos
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Observacao))
                                        {
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-sticky-note text-warning me-2"></i>
                                                <div>
                                                    <small class="text-muted">
                                                        @(item.Observacao.Length > 40 ?
                                                                                                    item.Observacao.Substring(0, 40) + "..." :
                                                                                                    item.Observacao)
                                        </small>
                                    </div>
                                </div>
                                                                }
                                        else
                                        {
                                            <small class="text-muted">
                                                <i class="fas fa-minus"></i> Sem observações
                                            </small>
                                        }

                                        @if (item.IdAgenda.HasValue)
                                        {
                                            <br>
                                            <span class="badge bg-secondary mt-1">
                                                <i class="fas fa-calendar-check"></i> Agenda #@item.IdAgenda
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/Atendimento/Details/@item.Id" class="btn btn-outline-info" title="Ver detalhes">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Resumo e Estatísticas -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="text-primary">@Model.Count()</h5>
                        <small class="text-muted">Total de Atendimentos</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="text-success">@Model.Where(a => a.DataAtendimento.Date == DateTime.Today).Count()</h5>
                        <small class="text-muted">Atendimentos Hoje</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="text-warning">@Model.Where(a => a.DataAtendimento.Month == DateTime.Now.Month).Count()</h5>
                        <small class="text-muted">Este Mês</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="text-info">@Model.Sum(a => a.DuracaoAtendimento)</h5>
                        <small class="text-muted">Minutos Totais</small>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Nenhum atendimento realizado</h4>
                <p class="text-muted mb-4">Você ainda não realizou nenhum atendimento.</p>
                <a href="/Atendimento/Create" class="btn btn-success btn-lg">
                    <i class="fas fa-plus-circle"></i> Criar Primeiro Atendimento
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Script para destacar atendimentos de hoje
        document.addEventListener('DOMContentLoaded', function() {
            const hoje = new Date().toLocaleDateString('pt-BR');
            const linhas = document.querySelectorAll('tbody tr');

            linhas.forEach(function(linha) {
                const dataCell = linha.querySelector('td:first-child strong');
                if (dataCell && dataCell.textContent === hoje) {
                    linha.classList.add('table-warning');
                    linha.setAttribute('title', 'Atendimento de hoje');
                }
            });
        });
    </script>
}
    ViewData["Title"] = "Meu Perfil";
}

<div class="container mt-4">
    <h1>Meu Perfil</h1>

    <div class="card">
        <div class="card-body">
            <p><strong>Nome:</strong> @Model.Nome</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>CPF:</strong> @Model.Cpf</p>
            <p><strong>CRO:</strong> @Model.Cro</p>
            <p><strong>Telefone:</strong> @Model.Telefone</p>
            <p><strong>Endere√ßo:</strong> @Model.Endereco</p>
        </div>
    </div>

    <a href="/Dentista/EditarMeuPerfil" class="btn btn-primary mt-3">Editar Perfil</a>
    <a href="/Dentista/Dashboard" class="btn btn-secondary mt-3">Voltar</a>
</div>
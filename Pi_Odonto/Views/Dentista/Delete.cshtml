@{
    ViewData["Title"] = "Excluir Dentista";
}
@model Pi_Odonto.Models.Dentista

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h2 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirmar Exclusão
                    </h2>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">
                            <i class="fas fa-warning"></i> Atenção!
                        </h4>
                        <p>Tem certeza que deseja excluir este dentista? Esta ação não pode ser desfeita.</p>
                    </div>

                    <div class="card bg-light">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-user-md"></i> Dados do Dentista
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold text-primary">
                                            <i class="fas fa-user"></i> Nome:
                                        </label>
                                        <p class="form-control-plaintext border-bottom">@Model.Nome</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold text-primary">
                                            <i class="fas fa-id-card"></i> CPF:
                                        </label>
                                        <p class="form-control-plaintext border-bottom">
                                            @if (Model.Cpf.Length == 11)
                                            {
                                                @($"{Model.Cpf.Substring(0, 3)}.{Model.Cpf.Substring(3, 3)}.{Model.Cpf.Substring(6, 3)}-{Model.Cpf.Substring(9, 2)}")
                                            }
                                            else
                                            {
                                                @Model.Cpf
                                            }
                                        </p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold text-primary">
                                            <i class="fas fa-certificate"></i> CRO:
                                        </label>
                                        <p class="form-control-plaintext border-bottom">
                                            <span class="badge bg-info">@Model.Cro</span>
                                        </p>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold text-primary">
                                            <i class="fas fa-phone"></i> Telefone:
                                        </label>
                                        <p class="form-control-plaintext border-bottom">
                                            @if (Model.Telefone.Length == 11)
                                            {
                                                @($"({Model.Telefone.Substring(0, 2)}) {Model.Telefone.Substring(2, 5)}-{Model.Telefone.Substring(7, 4)}")
                                            }
                                            else
                                            {
                                                @Model.Telefone
                                            }
                                        </p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold text-primary">
                                            <i class="fas fa-envelope"></i> Email:
                                        </label>
                                        <p class="form-control-plaintext border-bottom">@Model.Email</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold text-primary">
                                            <i class="fas fa-map-marker-alt"></i> Endereço:
                                        </label>
                                        <p class="form-control-plaintext border-bottom">@Model.Endereco</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('Esta ação não pode ser desfeita. Confirma a exclusão?')">
                                <i class="fas fa-trash"></i> Confirmar Exclusão
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}

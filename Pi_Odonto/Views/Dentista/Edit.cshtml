@{
    ViewData["Title"] = "Editar Dentista";
}
@model Pi_Odonto.Models.Dentista

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white text-center">
                    <h2 class="mb-0">
                        <i class="fas fa-edit"></i> Editar Dentista
                    </h2>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Nome" class="form-label fw-bold">
                                        <i class="fas fa-user text-primary"></i> Nome do Dentista <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo do dentista" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Cpf" class="form-label fw-bold">
                                        <i class="fas fa-id-card text-primary"></i> CPF <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Cpf" class="form-control" id="cpfInput" placeholder="000.000.000-00" maxlength="14" />
                                    <span asp-validation-for="Cpf" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Cro" class="form-label fw-bold">
                                        <i class="fas fa-certificate text-primary"></i> CRO <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Cro" class="form-control" placeholder="Digite o CRO" maxlength="10" />
                                    <span asp-validation-for="Cro" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Telefone" class="form-label fw-bold">
                                        <i class="fas fa-phone text-primary"></i> Telefone <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Telefone" class="form-control" id="telefoneInput" placeholder="(11) 99999-9999" maxlength="15" />
                                    <span asp-validation-for="Telefone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label fw-bold">
                                        <i class="fas fa-envelope text-primary"></i> Email <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="dentista@email.com" maxlength="50" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Endereco" class="form-label fw-bold">
                                        <i class="fas fa-map-marker-alt text-primary"></i> Endereço <span class="text-danger">*</span>
                                    </label>
                                    <textarea asp-for="Endereco" class="form-control" rows="3" placeholder="Rua, número, bairro, cidade, CEP" maxlength="60"></textarea>
                                    <span asp-validation-for="Endereco" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar para Lista
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        // Máscara para CPF
        document.getElementById('cpfInput').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                value = value.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/, '$1.$2.$3-$4');
                e.target.value = value;
            }
        });

        // Máscara para telefone
        document.getElementById('telefoneInput').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                value = value.replace(/(\d{2})(\d{5})(\d{4})/, '($1) $2-$3');
                e.target.value = value;
            }
        });
    </script>
}

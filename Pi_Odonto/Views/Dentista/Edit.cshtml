@{
    ViewData["Title"] = "Editar Dentista";
}
@model Pi_Odonto.ViewModels.DentistaViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white text-center">
                    <h2 class="mb-0">
                        <i class="fas fa-edit"></i> Editar Dentista
                    </h2>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Nome" class="form-label fw-bold">
                                        <i class="fas fa-user text-primary"></i> Nome do Dentista <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo do dentista" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Cpf" class="form-label fw-bold">
                                        <i class="fas fa-id-card text-primary"></i> CPF <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Cpf" class="form-control" id="cpfInput" placeholder="000.000.000-00" maxlength="14" />
                                    <span asp-validation-for="Cpf" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Cro" class="form-label fw-bold">
                                        <i class="fas fa-certificate text-primary"></i> CRO <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Cro" class="form-control" placeholder="Digite o CRO" maxlength="10" />
                                    <span asp-validation-for="Cro" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Telefone" class="form-label fw-bold">
                                        <i class="fas fa-phone text-primary"></i> Telefone <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Telefone" class="form-control" id="telefoneInput" placeholder="(11) 99999-9999" maxlength="15" />
                                    <span asp-validation-for="Telefone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label fw-bold">
                                        <i class="fas fa-envelope text-primary"></i> Email <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="dentista@email.com" maxlength="50" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Endereco" class="form-label fw-bold">
                                        <i class="fas fa-map-marker-alt text-primary"></i> Endereço <span class="text-danger">*</span>
                                    </label>
                                    <textarea asp-for="Endereco" class="form-control" rows="3" placeholder="Rua, número, bairro, cidade, CEP" maxlength="60"></textarea>
                                    <span asp-validation-for="Endereco" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Seção de Escala de Trabalho -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label for="IdEscala" class="form-label fw-bold">
                                        <i class="fas fa-clock text-primary"></i> Escala de Trabalho
                                    </label>
                                    <select name="IdEscala" class="form-select" asp-for="IdEscala">
                                        <option value="">Selecione uma escala de trabalho</option>
                                        @foreach (var escala in ViewBag.Escalas as List<Pi_Odonto.Models.EscalaTrabalho>)
                                        {
                                            <option value="@escala.IdEscala">@escala.DtDisponivel - @escala.HrInicio:00 às @escala.HrFim:00</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Seção de Disponibilidades -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-calendar-check text-primary"></i> Disponibilidades de Atendimento
                                    </label>
                                    <p class="text-muted small">Selecione os horários em que o dentista está disponível para atendimento:</p>
                                    
                                    <div class="row">
                                        @{
                                            var diasSemana = Model.Disponibilidades.GroupBy(d => d.DiaSemana).OrderBy(g => g.Key).ToList();
                                        }
                                        @foreach (var dia in diasSemana)
                                        {
                                            <div class="col-md-4 mb-3">
                                                <div class="card border">
                                                    <div class="card-header bg-light">
                                                        <h6 class="mb-0 fw-bold text-center">@dia.Key</h6>
                                                    </div>
                                                    <div class="card-body p-2">
                                                        @foreach (var disponibilidade in dia.OrderBy(d => d.HoraInicio))
                                                        {
                                                            var index = Model.Disponibilidades.IndexOf(disponibilidade);
                                                            <div class="form-check">
                                                                <input type="checkbox" 
                                                                       class="form-check-input" 
                                                                       name="Disponibilidades[@index].Selecionado" 
                                                                       value="true" 
                                                                       @(disponibilidade.Selecionado ? "checked" : "") />
                                                                <input type="hidden" name="Disponibilidades[@index].Selecionado" value="false" />
                                                                <input type="hidden" name="Disponibilidades[@index].DiaSemana" value="@disponibilidade.DiaSemana" />
                                                                <input type="hidden" name="Disponibilidades[@index].HoraInicio" value="@disponibilidade.HoraInicio" />
                                                                <input type="hidden" name="Disponibilidades[@index].HoraFim" value="@disponibilidade.HoraFim" />
                                                                <label class="form-check-label">
                                                                    @disponibilidade.HoraInicio.ToString(@"hh\:mm") - @disponibilidade.HoraFim.ToString(@"hh\:mm")
                                                                </label>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar para Lista
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        // Máscara para CPF
        document.getElementById('cpfInput').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                value = value.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/, '$1.$2.$3-$4');
                e.target.value = value;
            }
        });

        // Máscara para telefone
        document.getElementById('telefoneInput').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                value = value.replace(/(\d{2})(\d{5})(\d{4})/, '($1) $2-$3');
                e.target.value = value;
            }
        });
    </script>
}

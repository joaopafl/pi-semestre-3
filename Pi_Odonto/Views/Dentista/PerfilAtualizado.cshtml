@{
    ViewData["Title"] = "Perfil Atualizado";
}

<style>
    .success-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 70vh;
    }

    .success-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        padding: 60px;
        text-align: center;
        max-width: 500px;
        animation: slideIn 0.5s ease-out;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .success-icon {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: linear-gradient(135deg, #48bb78, #38a169);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 30px;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(72, 187, 120, 0.7);
        }

        50% {
            transform: scale(1.05);
            box-shadow: 0 0 0 20px rgba(72, 187, 120, 0);
        }
    }

    .success-icon i {
        font-size: 3rem;
        color: white;
    }

    .success-title {
        font-size: 2rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 15px;
    }

    .success-message {
        font-size: 1.1rem;
        color: #4a5568;
        margin-bottom: 30px;
    }

    .redirect-info {
        font-size: 0.9rem;
        color: #718096;
        margin-top: 20px;
    }

    .countdown {
        font-weight: 700;
        color: #4a90e2;
        font-size: 1.2rem;
    }

    .loader {
        width: 40px;
        height: 40px;
        border: 4px solid #e2e8f0;
        border-top: 4px solid #4a90e2;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 20px auto;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>

<div class="success-container">
    <div class="success-card">
        <div class="success-icon">
            <i class="fas fa-check"></i>
        </div>

        <h1 class="success-title">Tudo Certo!</h1>

        <p class="success-message">
            @ViewBag.Mensagem
        </p>

        <div class="loader"></div>

        <p class="redirect-info">
            Redirecionando em <span class="countdown" id="countdown">2</span> segundos...
        </p>

        <a href="/Dentista/MeuPerfil" class="btn btn-primary mt-3">
            <i class="fas fa-arrow-left"></i> Voltar Agora
        </a>
    </div>
</div>

<script>
    // Countdown e redirecionamento
    let seconds = 2;
    const countdownElement = document.getElementById('countdown');

    const interval = setInterval(() => {
        seconds--;
        countdownElement.textContent = seconds;

        if (seconds <= 0) {
            clearInterval(interval);
            window.location.href = '/Dentista/MeuPerfil';
        }
    }, 1000);
</script>
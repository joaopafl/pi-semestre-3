@model Pi_Odonto.Models.Dentista

@{
    ViewData["Title"] = "Minha Escala de Trabalho";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-calendar-week"></i> Minha Escala de Trabalho</h4>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <a href="/Dentista/Dashboard" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar ao Dashboard
                </a>
            </div>

            @if (Model.Disponibilidades != null && Model.Disponibilidades.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    <strong>Importante:</strong> Sua escala de trabalho é gerenciada pelo administrador do sistema.
                </div>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Dia da Semana</th>
                            <th>Horário Início</th>
                            <th>Horário Fim</th>
                            <th>Duração</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var disp in Model.Disponibilidades.OrderBy(d => d.DiaSemana))
                        {
                            <tr>
                                <td><strong><i class="fas fa-calendar-day text-primary"></i> @disp.DiaSemana</strong></td>
                                <td><span class="badge bg-success">@disp.HoraInicio.ToString(@"hh\:mm")</span></td>
                                <td><span class="badge bg-danger">@disp.HoraFim.ToString(@"hh\:mm")</span></td>
                                <td>
                                    @{
                                        var duracao = disp.HoraFim.Subtract(disp.HoraInicio);
                                    }
                                    <span class="badge bg-info">@duracao.Hours h @duracao.Minutes min</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="row mt-4">
                    <div class="col-md-4 text-center">
                        <h5 class="text-primary">@Model.Disponibilidades.Select(d => d.DiaSemana).Distinct().Count()</h5>
                        <small class="text-muted">Dias da Semana</small>
                    </div>
                    <div class="col-md-4 text-center">
                        <h5 class="text-success">@Model.Disponibilidades.Count()</h5>
                        <small class="text-muted">Períodos de Trabalho</small>
                    </div>
                    <div class="col-md-4 text-center">
                        <h5 class="text-info">@Model.Disponibilidades.Sum(d => d.HoraFim.Subtract(d.HoraInicio).TotalHours).ToString("F1")h</h5>
                        <small class="text-muted">Total Semanal</small>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    <i class="fas fa-calendar-times fa-3x mb-3"></i>
                    <h5>Nenhuma escala cadastrada</h5>
                    <p>Entre em contato com o administrador para configurar sua escala de trabalho.</p>
                </div>
            }
        </div>
    </div>
</div>
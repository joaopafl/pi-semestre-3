@model Pi_Odonto.Models.DisponibilidadeDentista

@{
    ViewData["Title"] = "Adicionar Horário";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="fas fa-plus"></i> Adicionar Novo Horário</h4>
        </div>
        <div class="card-body">
            <form asp-action="CreateEscala" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="IdDentista" />

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="DiaSemana" class="form-label">
                            <i class="fas fa-calendar-day"></i> Dia da Semana
                        </label>
                        <select asp-for="DiaSemana" class="form-select" required>
                            <option value="">Selecione...</option>
                            <option value="Segunda">Segunda-feira</option>
                            <option value="Terça">Terça-feira</option>
                            <option value="Quarta">Quarta-feira</option>
                            <option value="Quinta">Quinta-feira</option>
                            <option value="Sexta">Sexta-feira</option>
                            <option value="Sábado">Sábado</option>
                            <option value="Domingo">Domingo</option>
                        </select>
                        <span asp-validation-for="DiaSemana" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="HoraInicio" class="form-label">
                            <i class="fas fa-clock"></i> Horário de Início
                        </label>
                        <input asp-for="HoraInicio" type="time" class="form-control" required />
                        <span asp-validation-for="HoraInicio" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="HoraFim" class="form-label">
                            <i class="fas fa-clock"></i> Horário de Término
                        </label>
                        <input asp-for="HoraFim" type="time" class="form-control" required />
                        <span asp-validation-for="HoraFim" class="text-danger"></span>
                    </div>
                </div>

                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    <strong>Dica:</strong> Escolha horários que você estará disponível para atendimento.
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Salvar Horário
                    </button>
                    <a href="/Dentista/EscalaTrabalho" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
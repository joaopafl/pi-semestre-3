@model Pi_Odonto.Models.Dentista

@{
    ViewData["Title"] = "Dashboard - Dentista";
}

<style>
    .dashboard-header {
        background: linear-gradient(135deg, #2c5282, #4a90e2);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
    }

    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        height: 100%;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .stat-icon {
        font-size: 3rem;
        margin-bottom: 15px;
    }

    .quick-action-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        display: block;
        height: 100%;
    }

        .quick-action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
            text-decoration: none;
        }

    .quick-action-icon {
        font-size: 2.5rem;
        margin-bottom: 15px;
    }

    .agendamento-item {
        background: white;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 15px;
        border-left: 4px solid #4a90e2;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

        .agendamento-item:hover {
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
            border-left-width: 6px;
        }

    .section-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 3px 15px rgba(0,0,0,0.08);
        margin-bottom: 25px;
        overflow: hidden;
    }

    .section-header {
        padding: 20px 25px;
        font-weight: 600;
        font-size: 1.1rem;
        border-bottom: 2px solid #f0f0f0;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .info-row {
        padding: 12px 0;
        border-bottom: 1px solid #f5f5f5;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .badge-day {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        margin-bottom: 8px;
    }
</style>

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="dashboard-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1><i class="fas fa-tooth"></i> Bem-vindo, Dr(a). @Model.Nome!</h1>
                <p class="mb-0"><i class="fas fa-id-card"></i> CRO: @Model.Cro | <i class="fas fa-envelope"></i> @Model.Email</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="/Dentista/MeuPerfil" class="btn btn-light me-2">
                    <i class="fas fa-user"></i> Meu Perfil
                </a>
                <form asp-action="Logout" asp-controller="Auth" method="post" class="d-inline">
                    <button type="submit" class="btn btn-outline-light">
                        <i class="fas fa-sign-out-alt"></i> Sair
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Estatísticas -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="stat-card text-center">
                <div class="stat-icon" style="color: #4a90e2;">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <h3 class="mb-2">@ViewBag.TotalAgendamentos</h3>
                <p class="text-muted mb-0">Total de Agendamentos</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="stat-card text-center">
                <div class="stat-icon" style="color: #48bb78;">
                    <i class="fas fa-calendar-day"></i>
                </div>
                <h3 class="mb-2">@ViewBag.AgendamentosHoje</h3>
                <p class="text-muted mb-0">Agendamentos Hoje</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="stat-card text-center">
                <div class="stat-icon" style="color: #f56565;">
                    <i class="fas fa-user-check"></i>
                </div>
                <h3 class="mb-2">@ViewBag.AtendimentosRealizados</h3>
                <p class="text-muted mb-0">Atendimentos Realizados</p>
            </div>
        </div>
    </div>

    <!-- Ações Rápidas -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3"><i class="fas fa-bolt"></i> Ações Rápidas</h4>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <a href="/Atendimento/Index" class="quick-action-card" style="color: #4a90e2;">
                <div class="quick-action-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <h6 class="mb-2">Atendimentos</h6>
                <p class="text-muted mb-0 small">Gerenciar atendimentos</p>
            </a>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <a href="/Odontograma/Index" class="quick-action-card" style="color: #48bb78;">
                <div class="quick-action-icon">
                    <i class="fas fa-tooth"></i>
                </div>
                <h6 class="mb-2">Odontograma</h6>
                <p class="text-muted mb-0 small">Visualizar odontogramas</p>
            </a>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <a href="/Dentista/EscalaTrabalho" class="quick-action-card" style="color: #ed8936;">
                <div class="quick-action-icon">
                    <i class="fas fa-calendar-week"></i>
                </div>
                <h6 class="mb-2">Escala de Trabalho</h6>
                <p class="text-muted mb-0 small">Ver minha disponibilidade</p>
            </a>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <a href="/Agendamento/Index" class="quick-action-card" style="color: #9f7aea;">
                <div class="quick-action-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <h6 class="mb-2">Agendamentos</h6>
                <p class="text-muted mb-0 small">Ver todos agendamentos</p>
            </a>
        </div>
    </div>

    <!-- Próximos Agendamentos -->
    <div class="row">
        <div class="col-12">
            <div class="section-card">
                <div class="section-header">
                    <span><i class="fas fa-calendar-alt"></i> Próximos Agendamentos</span>
                    <a href="/Agendamento/Index" class="btn btn-sm btn-outline-primary">
                        Ver Todos <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
                <div class="card-body">
                    @if (ViewBag.ProximosAgendamentos != null && ViewBag.ProximosAgendamentos.Count > 0)
                    {
                        @foreach (var agendamento in ViewBag.ProximosAgendamentos)
                        {
                            <div class="agendamento-item">
                                <div class="row align-items-center">
                                    <div class="col-md-3">
                                        <div>
                                            <i class="fas fa-child text-primary"></i>
                                            <strong>@agendamento.Crianca.Nome</strong>
                                        </div>
                                        <small class="text-muted">
                                            <i class="fas fa-birthday-cake"></i>
                                            @agendamento.Crianca.DataNascimento.ToString("dd/MM/yyyy")
                                        </small>
                                    </div>
                                    <div class="col-md-3">
                                        <i class="fas fa-calendar text-info"></i>
                                        <strong>@agendamento.DataAgendamento.ToString("dd/MM/yyyy")</strong>
                                        <br />
                                        <small class="text-muted">@agendamento.DataAgendamento.ToString("dddd")</small>
                                    </div>
                                    <div class="col-md-2">
                                        <i class="fas fa-clock text-warning"></i>
                                        <strong>@agendamento.HoraAgendamento.ToString(@"hh\:mm")</strong>
                                    </div>
                                    <div class="col-md-2">
                                        <span class="badge bg-success">Agendado</span>
                                    </div>
                                    <div class="col-md-2 text-end">
                                        <a href="/Atendimento/Criar?agendamentoId=@agendamento.Id"
                                           class="btn btn-sm btn-success">
                                            <i class="fas fa-tooth"></i> Iniciar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-calendar-times fa-4x mb-3 opacity-25"></i>
                            <p class="mb-0">Nenhum agendamento próximo</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Informações Pessoais e Disponibilidade -->
    <div class="row">
        <!-- Dados Pessoais -->
        <div class="col-md-6 mb-4">
            <div class="section-card">
                <div class="section-header">
                    <span><i class="fas fa-user"></i> Meus Dados</span>
                    <a href="/Dentista/Edit/@Model.Id" class="btn btn-sm btn-outline-info">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                </div>
                <div class="card-body px-4 py-3">
                    <div class="info-row">
                        <strong><i class="fas fa-user-circle text-primary"></i> Nome:</strong>
                        <span class="float-end">@Model.Nome</span>
                    </div>
                    <div class="info-row">
                        <strong><i class="fas fa-id-card text-info"></i> CPF:</strong>
                        <span class="float-end">@Model.Cpf</span>
                    </div>
                    <div class="info-row">
                        <strong><i class="fas fa-tooth text-success"></i> CRO:</strong>
                        <span class="float-end">@Model.Cro</span>
                    </div>
                    <div class="info-row">
                        <strong><i class="fas fa-envelope text-warning"></i> Email:</strong>
                        <span class="float-end">@Model.Email</span>
                    </div>
                    <div class="info-row">
                        <strong><i class="fas fa-phone text-danger"></i> Telefone:</strong>
                        <span class="float-end">@Model.Telefone</span>
                    </div>
                    <div class="info-row">
                        <strong><i class="fas fa-map-marker-alt text-secondary"></i> Endereço:</strong>
                        <span class="float-end">@Model.Endereco</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Disponibilidade -->
        <div class="col-md-6 mb-4">
            <div class="section-card">
                <div class="section-header">
                    <span><i class="fas fa-clock"></i> Escala de Trabalho</span>
                    <a href="/Dentista/EscalaTrabalho" class="btn btn-sm btn-outline-success">
                        <i class="fas fa-calendar-week"></i> Gerenciar
                    </a>
                </div>
                <div class="card-body px-4 py-3">
                    @if (Model.Disponibilidades != null && Model.Disponibilidades.Any())
                    {
                        @foreach (var disp in Model.Disponibilidades.OrderBy(d => d.DiaSemana))
                        {
                            <div class="info-row">
                                <span class="badge-day bg-primary text-white">
                                    <i class="fas fa-calendar-check"></i> @disp.DiaSemana
                                </span>
                                <br />
                                <span class="ms-2">
                                    <i class="fas fa-clock text-success"></i>
                                    @disp.HoraInicio.ToString(@"hh\:mm") às @disp.HoraFim.ToString(@"hh\:mm")
                                </span>
                            </div>
                        }
                        <div class="text-center mt-3">
                            <a href="/Dentista/CreateEscala" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-plus"></i> Adicionar Horário
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-calendar-times fa-3x mb-3 opacity-25"></i>
                            <p class="mb-3">Nenhuma disponibilidade cadastrada</p>
                            <a href="/Dentista/CreateEscala" class="btn btn-sm btn-success">
                                <i class="fas fa-plus"></i> Cadastrar Disponibilidade
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Acesso Negado";
}

<style>
    .access-denied-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .access-denied-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        padding: 50px;
        max-width: 600px;
        text-align: center;
    }

    .access-denied-icon {
        font-size: 100px;
        color: #e53e3e;
        margin-bottom: 30px;
        animation: shake 0.5s;
    }

    @@keyframes shake {
        0%, 100% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-10px);
        }

        75% {
            transform: translateX(10px);
        }
    }

    .access-denied-title {
        font-size: 2rem;
        font-weight: bold;
        color: #2d3748;
        margin-bottom: 20px;
    }

    .access-denied-message {
        font-size: 1.1rem;
        color: #4a5568;
        margin-bottom: 30px;
        line-height: 1.6;
    }

    .btn-back {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 15px 40px;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        border: none;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
        margin: 10px;
    }

        .btn-back:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .btn-secondary {
        background: #e2e8f0;
        color: #2d3748;
    }

        .btn-secondary:hover {
            background: #cbd5e0;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            color: #2d3748;
        }

    .info-box {
        background: #fff5f5;
        border-left: 4px solid #fc8181;
        padding: 20px;
        border-radius: 8px;
        margin-top: 30px;
        text-align: left;
    }

        .info-box strong {
            color: #c53030;
        }
</style>

<div class="access-denied-container">
    <div class="access-denied-card">
        <div class="access-denied-icon">
            <i class="fas fa-lock"></i>
        </div>

        <h1 class="access-denied-title">Acesso Negado</h1>

        <p class="access-denied-message">
            Desculpe, você não tem permissão para acessar esta página.
            <br>
            Esta funcionalidade está disponível apenas para administradores do sistema.
        </p>

        @if (!string.IsNullOrEmpty(ViewBag.TipoUsuario))
        {
            <div class="info-box">
                <p class="mb-2">
                    <strong><i class="fas fa-info-circle"></i> Informação:</strong>
                </p>
                <p class="mb-0">
                    @if (ViewBag.TipoUsuario == "Dentista")
                    {
                        <text>Você está logado como <strong>Dentista</strong>. Esta página é exclusiva para administradores.</text>
                    }
                    else if (ViewBag.TipoUsuario == "Responsavel")
                    {
                        <text>Você está logado como <strong>Responsável</strong>. Esta página é exclusiva para administradores.</text>
                    }
                    else
                    {
                        <text>Esta página requer permissões especiais de administrador.</text>
                    }
                </p>
            </div>
        }

        <div class="mt-4">
            @if (ViewBag.TipoUsuario == "Dentista")
            {
                <a href="/Dentista/Dashboard" class="btn-back">
                    <i class="fas fa-home"></i> Voltar ao Dashboard
                </a>
            }
            else if (ViewBag.TipoUsuario == "Responsavel")
            {
                <a href="/Perfil/Index" class="btn-back">
                    <i class="fas fa-home"></i> Voltar ao Perfil
                </a>
            }
            else if (ViewBag.TipoUsuario == "Admin")
            {
                <a href="/Admin/Dashboard" class="btn-back">
                    <i class="fas fa-home"></i> Voltar ao Dashboard
                </a>
            }
            else
            {
                <a href="/" class="btn-back">
                    <i class="fas fa-home"></i> Voltar ao Início
                </a>
            }

            <a href="javascript:history.back()" class="btn-back btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="mt-4">
            <small class="text-muted">
                <i class="fas fa-question-circle"></i>
                Se você acredita que deveria ter acesso, entre em contato com o administrador do sistema.
            </small>
        </div>
    </div>
</div>
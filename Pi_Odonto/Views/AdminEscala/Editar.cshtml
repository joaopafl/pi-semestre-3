@{
    ViewData["Title"] = "Editar Escala de Dentista";
    // Define uma lista de horários de trabalho padrão (blocos de 1 hora)
    var HorariosPadrao = new List<string> {
        "08:00", "09:00", "10:00", "11:00", "12:00", 
        "13:00", "14:00", "15:00", "16:00", "17:00"
    };
    
    // Obtém a hora de início atual como string hh:mm para seleção
    string HoraInicioAtual = Model.HoraInicio.ToString(@"hh\:mm");
}

@model Pi_Odonto.Models.EscalaMensalDentista

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Editar Escala
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="IdDentista" class="form-label fw-bold">
                                <i class="fas fa-user-md text-primary"></i> Dentista
                            </label>
                            <select asp-for="IdDentista" class="form-select" required>
                                <option value="">Selecione um dentista</option>
                                @foreach (var dentista in (List<Pi_Odonto.Models.Dentista>)ViewBag.Dentistas)
                                {
                                    <option value="@dentista.Id" selected="@(dentista.Id == Model.IdDentista)">
                                        @dentista.Nome (@dentista.Cro)
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="IdDentista" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DataEscala" class="form-label fw-bold">
                                <i class="fas fa-calendar text-primary"></i> Data
                            </label>
                            <input asp-for="DataEscala" type="date" class="form-control" 
                                   value="@Model.DataEscala.ToString("yyyy-MM-dd")" required />
                            <span asp-validation-for="DataEscala" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="HoraInicio" class="form-label fw-bold">
                                    <i class="fas fa-clock text-primary"></i> Hora de Início
                                </label>
                                <select asp-for="HoraInicio" class="form-select" id="HoraInicioSelect" required>
                                    @foreach (var horario in HorariosPadrao)
                                    {
                                        <option value="@horario:00" selected="@(horario == HoraInicioAtual)">
                                            @horario
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="HoraInicio" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="HoraFim" class="form-label fw-bold">
                                    <i class="fas fa-clock text-primary"></i> Hora de Fim
                                </label>
                                <input asp-for="HoraFim" type="time" class="form-control" 
                                       id="HoraFimInput"
                                       value="@Model.HoraFim.ToString(@"hh\:mm")" 
                                       step="3600" required readonly />
                                <small class="text-muted">Calculado automaticamente (1 hora após início)</small>
                                <span asp-validation-for="HoraFim" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input asp-for="Ativo" type="checkbox" class="form-check-input" />
                            <label asp-for="Ativo" class="form-check-label fw-bold">
                                Bloco Ativo (Permite Agendamentos)
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Calendario", new { data = Model.DataEscala.ToString("yyyy-MM-dd") })" 
                               class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar para Calendário
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function calcularHoraFim() {
            var horaInicioSelect = document.getElementById('HoraInicioSelect');
            var horaFimInput = document.getElementById('HoraFimInput');
            
            if (horaInicioSelect.value) {
                // A horaInicioSelect.value já está no formato HH:mm:ss, mas só precisamos do HH:mm para o Date
                var horaInicioStr = horaInicioSelect.value.substring(0, 5); 
                
                // Cria um objeto Date (Data é irrelevante)
                var horaInicio = new Date('2000-01-01T' + horaInicioStr + ':00');
                
                // Adiciona 1 hora
                horaInicio.setHours(horaInicio.getHours() + 1);
                
                // Formata para HH:mm
                var horaFim = horaInicio.toTimeString().slice(0, 5);
                
                // Atualiza o campo readonly
                horaFimInput.value = horaFim;
            }
        }

        // 1. Executar no carregamento para garantir que a HoraFim esteja correta
        calcularHoraFim();

        // 2. Executar sempre que o dropdown mudar
        document.getElementById('HoraInicioSelect').addEventListener('change', calcularHoraFim);
    </script>
}
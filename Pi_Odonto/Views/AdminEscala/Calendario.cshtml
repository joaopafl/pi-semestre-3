@{
    ViewData["Title"] = "Calendário de Escalas dos Dentistas";
    // Define a cultura para Português-Brasil
    var culturaPtBr = new System.Globalization.CultureInfo("pt-BR");
}

@model List<Pi_Odonto.Models.EscalaMensalDentista>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="text-primary">
                <i class="fas fa-calendar-alt"></i> Calendário de Escalas dos Dentistas
            </h1>
            <p class="text-muted">Gerencie as escalas mensais dos dentistas</p>
        </div>
        <div class="col-md-4 text-end">
            <button onclick="history.back()" class="btn btn-secondary btn-lg me-2">
                <i class="fas fa-arrow-left"></i> Voltar
            </button>
            <a href="@Url.Action("Criar")" class="btn btn-success btn-lg">
                <i class="fas fa-plus"></i> Nova Escala
            </a>
        </div>
    </div>

    @* Mantém os alertas de TempData para sucesso/erro de outras ações (Editar, Criar, Deletar falha de segurança) *@
    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @* ATENÇÃO: A lógica de AgendamentoVinculado agora está no JavaScript,
       mas esta tag TempData pode ser usada pelo Controller para outros avisos (não relacionados ao modal) *@
    @if (TempData["WarningMessage"] != null && TempData["AgendamentoVinculado"] == null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["WarningMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                @{
                    int ano = (int)ViewBag.Ano;
                    int mes = (int)ViewBag.Mes;
                    
                    var mesAnterior = mes == 1 ? 12 : mes - 1;
                    var anoAnterior = mes == 1 ? ano - 1 : ano;
                    
                    var mesProximo = mes == 12 ? 1 : mes + 1;
                    var anoProximo = mes == 12 ? ano + 1 : ano;

                    // Data de referência para redirecionamento
                    var dataAnterior = new DateTime(anoAnterior, mesAnterior, 1);
                    var dataProxima = new DateTime(anoProximo, mesProximo, 1);
                }

                <div class="col-md-4">
                    <a href="@Url.Action("Calendario", new { data = dataAnterior.ToString("yyyy-MM-dd") })"
                       class="btn btn-outline-primary">
                        <i class="fas fa-chevron-left"></i> Mês Anterior
                    </a>
                </div>
                <div class="col-md-4 text-center">
                    <h3 class="mb-0 text-capitalize">
                        @* Exibe o nome do mês em Português *@
                        @culturaPtBr.DateTimeFormat.GetMonthName(mes) @ano
                    </h3>
                </div>
                <div class="col-md-4 text-end">
                    <a href="@Url.Action("Calendario", new { data = dataProxima.ToString("yyyy-MM-dd") })"
                       class="btn btn-outline-primary">
                        Próximo Mês <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            @* Define os dias da semana em Português *@
                            <th class="text-center" style="width: 14%">Dom</th>
                            <th class="text-center" style="width: 14%">Seg</th>
                            <th class="text-center" style="width: 14%">Ter</th>
                            <th class="text-center" style="width: 14%">Qua</th>
                            <th class="text-center" style="width: 14%">Qui</th>
                            <th class="text-center" style="width: 14%">Sex</th>
                            <th class="text-center" style="width: 14%">Sáb</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            // Faz o casting seguro das ViewBags, resolvendo o RuntimeBinderException
                            var primeiroDia = (DateTime)ViewBag.PrimeiroDia;
                            var ultimoDia = (DateTime)ViewBag.UltimoDia;
                            // O casting é feito aqui, pois a Controller agora garante que ele exista
                            var escalasPorData = (Dictionary<DateTime, Dictionary<int, List<Pi_Odonto.Models.EscalaMensalDentista>>>)ViewBag.EscalasPorData;
                            var dentistas = (List<Pi_Odonto.Models.Dentista>)ViewBag.Dentistas;
                            var dentistasDict = dentistas.ToDictionary(d => d.Id, d => d.Nome);

                            var diaAtual = primeiroDia.AddDays(-(int)primeiroDia.DayOfWeek);
                            var fimMes = ultimoDia;
                            var fimCalendario = fimMes.AddDays(6 - (int)fimMes.DayOfWeek);
                        }

                        @while (diaAtual <= fimCalendario)
                        {
                            <tr>
                                @for (int i = 0; i < 7; i++)
                                {
                                    var dia = diaAtual.AddDays(i);
                                    var isCurrentMonth = dia.Month == primeiroDia.Month;
                                    var isToday = dia.Date == DateTime.Today;
                                    var isPastDate = dia.Date < DateTime.Today;
                                    
                                    // Verificação de existência
                                    var temEscalas = escalasPorData != null && escalasPorData.ContainsKey(dia.Date);
                                    var escalasDoDia = temEscalas ? escalasPorData[dia.Date] : new Dictionary<int, List<Pi_Odonto.Models.EscalaMensalDentista>>();
                                    var totalEscalasDia = escalasDoDia.Values.Sum(lista => lista.Count); // Contagem total de blocos

                                    <td class="@(isCurrentMonth ? "" : "text-muted") @(isToday ? "bg-light" : "") @(isPastDate ? "bg-secondary bg-opacity-10" : "")"
                                        style="height: 120px; vertical-align: top; position: relative;">
                                        <div class="d-flex justify-content-between align-items-start mb-1">
                                            <span class="fw-bold @(isToday ? "text-primary" : "") @(isPastDate ? "text-muted" : "")">@dia.Day</span>
                                            
                                            @if (isCurrentMonth && !isPastDate)
                                            {
                                                // Permite adicionar nova escala (redireciona para a view de criação múltipla)
                                                <a href="@Url.Action("Criar", new { data = dia.ToString("yyyy-MM-dd") })"
                                                    class="btn btn-sm btn-outline-success"
                                                    title="Adicionar escalas">
                                                    <i class="fas fa-plus"></i>
                                                </a>
                                            }
                                            @if (isPastDate && isCurrentMonth)
                                            {
                                                <span class="badge bg-secondary" title="Data passada">
                                                    <i class="fas fa-ban"></i>
                                                </span>
                                            }
                                        </div>

                                        @if (temEscalas && isCurrentMonth)
                                        {
                                            <div class="escalas-dia" style="font-size: 0.75rem;">
                                                @foreach (var grupo in escalasDoDia)
                                                {
                                                    var dentistaNome = dentistasDict.ContainsKey(grupo.Key) ? dentistasDict[grupo.Key] : "Desconhecido";
                                                    var cores = new[] { "primary", "success", "info", "warning", "danger" };
                                                    var corIndex = grupo.Key % cores.Length;

                                                    <div class="mb-1">
                                                        <span class="badge bg-@cores[corIndex] mb-1">@dentistaNome</span>
                                                        @foreach (var escala in grupo.Value.OrderBy(e => e.HoraInicio))
                                                        {
                                                            // VERIFICAÇÃO DE PASSADO: Impede edição/exclusão de escalas já encerradas
                                                            var dataHoraFim = escala.DataEscala.Date.Add(escala.HoraFim);
                                                            var isPast = dataHoraFim < DateTime.Now;
                                                            
                                                            <div class="d-flex justify-content-between align-items-center mb-1">
                                                                <small>
                                                                    @escala.HoraInicio.ToString(@"hh\:mm") - @escala.HoraFim.ToString(@"hh\:mm")
                                                                    @if (!escala.Ativo)
                                                                    {
                                                                        <i class="fas fa-minus-circle text-danger" title="Bloco Inativo"></i>
                                                                    }
                                                                </small>
                                                                <div class="d-flex gap-1">
                                                                    @if (!isPast) // Mostra botões apenas se a escala NÃO tiver passado
                                                                    {
                                                                        @* O clique em Editar irá para o Controller que faz a verificação antes de exibir a view *@
                                                                        <a href="@Url.Action("Editar", new { id = escala.Id })"
                                                                           class="btn btn-xs btn-outline-primary btn-sm"
                                                                           title="Editar">
                                                                            <i class="fas fa-edit"></i>
                                                                        </a>
                                                                        
                                                                        @* O clique em Deletar chama a função JS que faz a verificação AJAX *@
                                                                        <button type="button"
                                                                                class="btn btn-xs btn-outline-danger btn-sm"
                                                                                title="Excluir"
                                                                                onclick="openDeleteModal(@escala.Id)"> 
                                                                            <i class="fas fa-trash"></i>
                                                                        </button>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="badge bg-secondary" title="Bloqueado: Horário encerrado">
                                                                            <i class="fas fa-lock"></i>
                                                                        </span>
                                                                    }
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </td>
                                }
                            </tr>
                            diaAtual = diaAtual.AddDays(7);
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h5>Legenda de Dentistas</h5>
            <div class="row">
                @foreach (var dentista in dentistas)
                {
                    var cores = new[] { "primary", "success", "info", "warning", "danger" };
                    var corIndex = dentista.Id % cores.Length;
                    <div class="col-md-3 mb-2">
                        <span class="badge bg-@cores[corIndex]">@dentista.Nome (@dentista.Cro)</span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

{{-- **MODAL 1: CONFIRMAÇÃO DE EXCLUSÃO** --}}
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">
                    <i class="fas fa-trash-alt"></i> Confirmar Exclusão de Escala
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning"></i>
                </div>
                <p class="text-center fw-bold">
                    Tem certeza de que deseja excluir este horário da escala?
                </p>
                <p class="text-muted text-center small">
                    A exclusão removerá o horário do calendário.
                </p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Excluir Definitivamente
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

{{-- **MODAL 2: AVISO DE AGENDAMENTO VINCULADO** --}}
<div class="modal fade" id="warningModal" tabindex="-1" aria-labelledby="warningModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="warningModalLabel">
                    <i class="fas fa-exclamation-triangle"></i> Atenção!
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-exclamation-circle fa-4x text-warning"></i>
                </div>
                <p class="fw-bold text-center">
                    A data selecionada possui um agendamento vinculado e não pode ser editada ou deletada.
                </p>
                <p class="text-muted small text-center">
                    Se preferir, faça alterações diretamente na área "Minha Agenda".
                </p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <style>
        .escalas-dia {
            max-height: 80px;
            overflow-y: auto;
        }

        .btn-xs {
            padding: 0.1rem 0.3rem;
            font-size: 0.7rem;
        }
        
        .d-flex.gap-1 > * {
            margin-right: 2px;
        }

        .btn-close-white {
            filter: invert(1) grayscale(100%) brightness(200%);
        }
    </style>

    <script>
        // Função para abrir o modal de aviso de agendamento vinculado
        function openWarningModal() {
            var warningModal = new bootstrap.Modal(document.getElementById('warningModal'));
            warningModal.show();
        }

        // NOVO: Função que verifica o agendamento via AJAX antes de abrir qualquer modal
        async function openDeleteModal(escalaId) {
            
            // 1. URL para verificação via AJAX
            const checkUrl = '@Url.Action("VerificarAgendamento", "AdminEscala", new { id = "__id__" })'.replace('__id__', escalaId);
            
            try {
                // Requisição GET para verificar se tem agendamento
                const response = await fetch(checkUrl, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.hasAgendamento) {
                    // 2. Se tiver agendamento, mostra o modal de aviso IMEDIATAMENTE
                    openWarningModal();
                } else {
                    // 3. Se NÃO tiver agendamento, mostra o modal de confirmação de exclusão
                    
                    // Constrói a URL de POST para o formulário de exclusão
                    const deleteUrl = '@Url.Action("Deletar", "AdminEscala", new { id = "__id__" })'.replace('__id__', escalaId);
                    
                    // Define a action do formulário
                    var deleteForm = document.getElementById('deleteForm');
                    deleteForm.setAttribute('action', deleteUrl);

                    // Abre o modal de confirmação
                    var confirmModal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
                    confirmModal.show();
                }
            } catch (error) {
                console.error('Erro ao verificar agendamento:', error);
                alert('Erro na comunicação com o servidor ao tentar verificar a escala.');
            }
        }

        // LÓGICA DE EDIÇÃO (Bloqueio ao clicar em Editar e retornar para o calendário)
        $(document).ready(function() {
            // Verifica se o Controller setou o TempData para abrir o modal de aviso (usado para o fluxo de EDIÇÃO)
            @if (TempData["AgendamentoVinculado"] != null && TempData["AgendamentoVinculado"].ToString() == "true")
            {
                <text>
                    openWarningModal();
                </text>
            }
        });
    </script>
}
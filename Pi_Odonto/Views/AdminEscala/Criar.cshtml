@{
    ViewData["Title"] = "Criar Escala de Dentista";
}

@model Pi_Odonto.Models.EscalaMensalDentista

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle"></i> Criar Nova Escala
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Criar" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="IdDentista" class="form-label fw-bold">
                                <i class="fas fa-user-md text-primary"></i> Dentista
                            </label>
                            <select asp-for="IdDentista" class="form-select" required>
                                <option value="">Selecione um dentista</option>
                                @foreach (var dentista in (List<Pi_Odonto.Models.Dentista>)ViewBag.Dentistas)
                                {
                                    <option value="@dentista.Id">@dentista.Nome (@dentista.Cro)</option>
                                }
                            </select>
                            <span asp-validation-for="IdDentista" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DataEscala" class="form-label fw-bold">
                                <i class="fas fa-calendar text-primary"></i> Data
                            </label>
                            <input asp-for="DataEscala" type="date" class="form-control" 
                                   value="@(((DateTime?)ViewBag.DataSelecionada)?.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))" 
                                   required />
                            <span asp-validation-for="DataEscala" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="HoraInicio" class="form-label fw-bold">
                                    <i class="fas fa-clock text-primary"></i> Hora de Início
                                </label>
                                <input asp-for="HoraInicio" type="time" class="form-control" 
                                       step="3600" required />
                                <small class="text-muted">Cada bloco tem 1 hora de duração</small>
                                <span asp-validation-for="HoraInicio" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="HoraFim" class="form-label fw-bold">
                                    <i class="fas fa-clock text-primary"></i> Hora de Fim
                                </label>
                                <input asp-for="HoraFim" type="time" class="form-control" 
                                       step="3600" required readonly />
                                <small class="text-muted">Calculado automaticamente (1 hora após início)</small>
                                <span asp-validation-for="HoraFim" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> 
                            <strong>Dica:</strong> Você pode criar múltiplos blocos de 1 hora para o mesmo dentista no mesmo dia.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Calendario")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar para Calendário
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Criar Escala
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Formulário para criar múltiplos blocos -->
            <div class="card mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-layer-group"></i> Criar Múltiplos Blocos de Uma Vez
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CriarMultiplos" method="post" id="formMultiplos">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Dentista</label>
                            <select name="idDentista" class="form-select" required>
                                <option value="">Selecione um dentista</option>
                                @foreach (var dentista in (List<Pi_Odonto.Models.Dentista>)ViewBag.Dentistas)
                                {
                                    <option value="@dentista.Id">@dentista.Nome (@dentista.Cro)</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Data</label>
                            <input name="dataEscala" type="date" class="form-control" 
                                   value="@(((DateTime?)ViewBag.DataSelecionada)?.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))" 
                                   required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                Horários (separados por vírgula)
                            </label>
                            <input name="horarios" type="text" class="form-control" 
                                   placeholder="Ex: 08:00, 09:00, 10:00, 11:00" 
                                   required />
                            <small class="text-muted">
                                Digite os horários de início separados por vírgula. Cada um criará um bloco de 1 hora.
                            </small>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-info">
                                <i class="fas fa-save"></i> Criar Múltiplos Blocos
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Calcular automaticamente a hora fim (1 hora após início)
        document.querySelector('input[name="HoraInicio"]').addEventListener('change', function() {
            if (this.value) {
                var horaInicio = new Date('2000-01-01T' + this.value + ':00');
                horaInicio.setHours(horaInicio.getHours() + 1);
                var horaFim = horaInicio.toTimeString().slice(0, 5);
                document.querySelector('input[name="HoraFim"]').value = horaFim;
            }
        });
    </script>
}


@{
    ViewData["Title"] = "Criar Escala de Dentista";
    // Define uma lista de horários de trabalho padrão (blocos de 1 hora)
    var HorariosPadrao = new List<string> {
        "08:00", "09:00", "10:00", "11:00", "12:00",
        "13:00", "14:00", "15:00", "16:00", "17:00"
    };
    // NOVO: Variável para passar os dados do controller para o JS (lista de horários ocupados)
    var HorariosOcupadosJson = (string)ViewBag.HorariosOcupadosJson;
}

@model Pi_Odonto.Models.EscalaMensalDentista

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle"></i> Criar Nova Escala (Blocos de 1 Hora)
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="CriarMultiplos" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <h6 class="text-secondary mb-3"><i class="fas fa-caret-right"></i> Informações Básicas</h6>
                        <hr class="mt-1 mb-3" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-user-md text-primary"></i> Dentista
                            </label>
                            <select name="idDentista" class="form-select" id="dentistaSelect" required>
                                <option value="">Selecione um dentista</option>
                                @foreach (var dentista in (List<Pi_Odonto.Models.Dentista>)ViewBag.Dentistas)
                                {
                                    <option value="@dentista.Id">@dentista.Nome (@dentista.Cro)</option>
                                }
                            </select>
                            <span asp-validation-for="IdDentista" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-calendar text-primary"></i> Data
                            </label>
                            <input name="dataEscala" id="dataInput" type="date" class="form-control"
                                   value="@(((DateTime?)ViewBag.DataSelecionada)?.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))"
                                   required />
                        </div>

                        <h6 class="text-secondary mb-3 mt-4"><i class="fas fa-caret-right"></i> Seleção de Horários (Blocos de 1h)</h6>
                        <hr class="mt-1 mb-3" />

                        <div class="mb-3 p-3 border rounded bg-light">
                            <label class="form-label fw-bold mb-3">
                                <i class="fas fa-clock text-success"></i> Selecione os Horários de Início:
                            </label>
                            <div class="row" id="horariosContainer">
                                @foreach (var horario in HorariosPadrao)
                                {
                                    <div class="col-6 col-sm-4 col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox"
                                                   name="horariosSelecionados"
                                                   id="horario_@horario.Replace(":", "")"
                                                   value="@horario:00" />
                                            <label class="form-check-label" for="horario_@horario.Replace(":", "")">
                                                @horario - @(DateTime.Parse(horario).AddHours(1).ToString("HH:mm"))
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                            <small class="text-muted mt-2 d-block">Cada bloco selecionado será criado com 1 hora de duração.</small>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            **IMPORTANTE:** A lista de horários disponíveis se ajusta à **Data** selecionada, pois horários ocupados por **qualquer** dentista ficam indisponíveis.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Calendario")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar para Calendário
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Criar Blocos de Escala
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Dados JSON dos horários ocupados (lista simples de strings HH:mm)
        const horariosOcupados = @Html.Raw(HorariosOcupadosJson);
        const dataInput = document.getElementById('dataInput');
        const dentistaSelect = document.getElementById('dentistaSelect');
        const checkboxes = document.querySelectorAll('input[name="horariosSelecionados"]');

        function atualizarHorariosDisponiveis() {
            const idDentista = dentistaSelect.value;

            checkboxes.forEach(cb => {
                const horarioValue = cb.value; // Ex: 08:00:00
                const horarioStr = horarioValue.substring(0, 5); // Pega apenas HH:mm
                const isOcupado = horariosOcupados.includes(horarioStr);

                // Desabilita se o horário estiver ocupado OU se nenhum dentista foi selecionado
                const shouldBeDisabled = isOcupado || !idDentista;

                cb.disabled = shouldBeDisabled;
                cb.checked = !shouldBeDisabled && cb.checked; // Desmarca se estiver desabilitado

                // Estilo visual e Tooltip
                if (shouldBeDisabled) {
                    cb.parentElement.classList.add('text-danger');
                    cb.parentElement.classList.remove('text-muted');
                    if (isOcupado) {
                       cb.title = `Horário ${horarioStr} já ocupado por outro bloco nesta data.`;
                    } else {
                       cb.title = 'Selecione um dentista para continuar.';
                    }
                } else {
                    cb.parentElement.classList.remove('text-danger');
                    cb.parentElement.classList.remove('text-muted');
                    cb.title = '';
                }
            });
        }

        // 1. Ouvir mudanças no dentista
        dentistaSelect.addEventListener('change', atualizarHorariosDisponiveis);

        // 2. Ouvir mudanças na data e redirecionar para recarregar a lista de horários ocupados
        // Isso garante que o Controller traga a lista correta de horários ocupados para a nova data.
        dataInput.addEventListener('change', function() {
            const novaData = this.value;
            // Preserva o Id do dentista na URL se necessário, mas o foco é recarregar a data
            window.location.href = '@Url.Action("Criar", "AdminEscala")?data=' + novaData;
        });

        // 3. Executar ao carregar a página
        atualizarHorariosDisponiveis();

    </script>
}